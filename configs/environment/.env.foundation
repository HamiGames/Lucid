# Lucid Project Foundation Environment Configuration
# This file contains environment variables for the initial setup of the Lucid blockchain system.
# It is used during the foundation phase (Phase 1) to configure database and authentication services.

# General Project Settings
PROJECT_NAME="Lucid"
ENVIRONMENT="development"
DEBUG_MODE="true"
LOG_LEVEL="INFO"

# Network Configuration
NETWORK_NAME="lucid-dev"
NETWORK_SUBNET="172.20.0.0/16"

# Docker and Container Settings
DOCKER_BUILDKIT="1"
COMPOSE_PROJECT_NAME="lucid"

# Database Configuration (Cluster 08)
MONGODB_URI="mongodb://localhost:27017/lucid"
MONGODB_USER="lucid"
MONGODB_PASSWORD="change_me_in_production"
REDIS_URI="redis://localhost:6379/0"
ELASTICSEARCH_HOST="localhost:9200"

# Authentication Service (Cluster 09)
AUTH_SERVICE_PORT="8089"
AUTH_SERVICE_HOST="localhost"
JWT_SECRET_KEY="change_me_in_production"
JWT_ALGORITHM="HS256"
TOKEN_EXPIRE_MINUTES="15"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# Hardware Wallet Integration
HARDWARE_WALLET_ENABLED="true"

# Rate Limiting for Foundation Services
RATE_LIMIT_PUBLIC="100"  # per minute
RATE_LIMIT_AUTHENTICATED="1000"  # per minute

# Service Endpoints (will be updated as services are built)
API_GATEWAY_URL="http://localhost:8080"
BLOCKCHAIN_CORE_URL="http://localhost:8084"

# Documentation and Compliance
DOCUMENTATION_URL="http://localhost:8080/docs"

# Note: This file should be updated with production values before deployment.
# Sensitive values like passwords and secret keys must be changed.