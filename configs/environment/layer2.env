# LUCID Layer 2 Environment Configuration
# Service Integration Layer - RDP Server & Blockchain Deployment
# Generated: 2025-10-05

# Layer 2 Service Configuration
LUCID_LAYER=2
LUCID_PHASE=service-integration
LUCID_COMPONENTS=rdp-server,blockchain-deployment

# RDP Server Configuration
RDP_SESSIONS_PATH=/data/sessions
RDP_RECORDINGS_PATH=/data/recordings
RDP_DISPLAY_PATH=/data/display
XRDP_PORT=3389
XRDP_CONFIG_PATH=/etc/xrdp
DISPLAY_SERVER=wayland
HARDWARE_ACCELERATION=true
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_MINUTES=60
MAX_SESSION_DURATION=3600

# xrdp Integration Configuration
XRDP_LOG_LEVEL=INFO
XRDP_ENABLE_SYSLOG=false
XRDP_CHANNEL_RDPDR=true
XRDP_CHANNEL_RDPSND=true
XRDP_CHANNEL_DRDYNVC=true
XRDP_CHANNEL_CLIPRDR=true

# Session Host Manager Configuration
SESSION_RECORDING_PATH=/data/recordings
SESSION_RECORDING_FORMAT=mp4
SESSION_RECORDING_QUALITY=high
SESSION_RECORDING_BITRATE=2000k
SESSION_RECORDING_FPS=30

# Blockchain Deployment Configuration
TRON_NETWORK=shasta
TRON_RPC_URL=https://api.shasta.trongrid.io
TRON_MAINNET_RPC_URL=https://api.trongrid.io
CONTRACT_ARTIFACTS_PATH=/data/contracts
DEPLOYMENT_LOG_PATH=/data/logs
DEPLOYMENT_STRATEGY=sequential
CONTRACT_COMPILER_VERSION=0.8.19

# Contract Deployment Configuration
LUCID_ANCHORS_ADDRESS=
PAYOUT_ROUTER_V0_ADDRESS=
PAYOUT_ROUTER_KYC_ADDRESS=
SMART_CONTRACTS_DEPLOYED=false

# TRON Network Configuration
TRON_PRIVATE_KEY=
TRON_ADDRESS=
TRON_ENERGY_LIMIT=10000000
TRON_FEE_LIMIT=1000000000

# Contract Compiler Configuration
SOLC_VERSION=0.8.19
CONTRACT_SOURCE_PATH=/data/contracts/source
CONTRACT_ARTIFACTS_PATH=/data/contracts/artifacts
COMPILER_OPTIMIZATION=true
COMPILER_OPTIMIZATION_RUNS=200

# Deployment Orchestrator Configuration
DEPLOYMENT_TIMEOUT=300
DEPLOYMENT_RETRY_ATTEMPTS=3
DEPLOYMENT_RETRY_DELAY=10
DEPLOYMENT_VERIFICATION_TIMEOUT=60

# Service URLs
RDP_SERVER_URL=http://rdp-server-manager:8087
XRDP_INTEGRATION_URL=http://xrdp-integration:8088
SESSION_HOST_URL=http://session-host-manager:8089
CONTRACT_DEPLOYMENT_URL=http://contract-deployment:8090
CONTRACT_COMPILER_URL=http://contract-compiler:8091
DEPLOYMENT_ORCHESTRATOR_URL=http://deployment-orchestrator:8092

# Database Configuration
MONGODB_URL=mongodb://lucid:lucid@lucid_mongo:27017/lucid?authSource=admin
MONGODB_DATABASE=lucid
MONGODB_COLLECTION_DEPLOYMENTS=contract_deployments
MONGODB_COLLECTION_CONTRACTS=deployed_contracts

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/lucid/layer2.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration
JWT_SECRET_KEY=
JWT_EXPIRY_HOURS=24
ENCRYPTION_KEY_ROTATION_DAYS=30
SESSION_ENCRYPTION_ENABLED=true

# Performance Configuration
UVICORN_WORKERS=1
UVICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# Pi 5 Hardware Optimization
PI5_GPU_ACCELERATION=true
PI5_HARDWARE_ENCODING=true
PI5_V4L2_M2M_ENABLED=true
PI5_MEMORY_LIMIT=2G
PI5_CPU_LIMIT=2

# Network Configuration
NETWORK_TIMEOUT=30
NETWORK_RETRY_ATTEMPTS=3
NETWORK_RETRY_DELAY=5
NETWORK_KEEPALIVE=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
PROMETHEUS_ENABLED=true

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false
ENABLE_TRACING=false
