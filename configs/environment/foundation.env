# ============================================================================
# PROJECT IDENTIFICATION
# ============================================================================
LUCID_PROJECT=lucid
LUCID_VERSION=1.0.0
LUCID_PHASE=foundation
LUCID_BUILD_PHASE=1
LUCID_ENVIRONMENT=development

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
# Docker BuildKit (Required)
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Docker Network Configuration
LUCID_NETWORK=lucid-pi-network
LUCID_NETWORK_SUBNET=172.20.0.0/16
LUCID_NETWORK_GATEWAY=172.20.0.1
LUCID_TRON_ISOLATED_NETWORK=lucid-tron-isolated
LUCID_TRON_ISOLATED_SUBNET=172.21.0.0/16

# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=pickme
DOCKER_IMAGE_PREFIX=lucid

# ============================================================================
# PYTHON ENVIRONMENT
# ============================================================================
PYTHON_VERSION=3.11
PYTHON_ENV=production
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app

# ============================================================================
# FOUNDATION SERVICES CONFIGURATION
# ============================================================================

# MongoDB Configuration (Cluster 08)
