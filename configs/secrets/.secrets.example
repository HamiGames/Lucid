# Lucid Secrets Configuration Template
# Copy this file to .secrets and fill in the actual values
# NEVER commit .secrets to version control

# =============================================================================
# JWT SECRETS
# =============================================================================
# JWT signing keys for authentication tokens
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your-256-bit-jwt-secret-key-here-change-in-production
JWT_REFRESH_SECRET_KEY=your-256-bit-jwt-refresh-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# DATABASE SECRETS
# =============================================================================
# MongoDB credentials
MONGODB_USERNAME=lucid
MONGODB_PASSWORD=your-mongodb-password-here-change-in-production
MONGODB_ROOT_PASSWORD=your-mongodb-root-password-here-change-in-production
MONGODB_AUTH_DATABASE=admin

# Redis credentials
REDIS_PASSWORD=your-redis-password-here-change-in-production

# Elasticsearch credentials
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password-here-change-in-production

# =============================================================================
# TRON PAYMENT SECRETS (ISOLATED CLUSTER)
# =============================================================================
# TRON network private keys (encrypted)
TRON_PRIVATE_KEY_ENCRYPTED=your-encrypted-tron-private-key-here
TRON_PRIVATE_KEY_PASSPHRASE=your-tron-key-passphrase-here
TRON_API_KEY=your-tron-api-key-here
TRON_NODE_URL=https://api.trongrid.io

# USDT-TRC20 contract address
USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# =============================================================================
# HARDWARE WALLET SECRETS
# =============================================================================
# Hardware wallet integration keys
LEDGER_APP_ID=your-ledger-app-id-here
TREZOR_APP_ID=your-trezor-app-id-here
KEEPKEY_APP_ID=your-keepkey-app-id-here

# =============================================================================
# SERVICE MESH SECRETS
# =============================================================================
# Service mesh mTLS certificates
SERVICE_MESH_CA_CERT=your-service-mesh-ca-certificate-here
SERVICE_MESH_CA_KEY=your-service-mesh-ca-private-key-here
SERVICE_MESH_JWT_SECRET=your-service-mesh-jwt-secret-here

# =============================================================================
# ADMIN INTERFACE SECRETS
# =============================================================================
# Admin interface authentication
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
ADMIN_API_KEY=your-admin-api-key-here
ADMIN_SESSION_SECRET=your-admin-session-secret-here

# =============================================================================
# BLOCKCHAIN SECRETS
# =============================================================================
# Lucid blockchain consensus secrets
BLOCKCHAIN_CONSENSUS_SECRET=your-blockchain-consensus-secret-here
BLOCKCHAIN_VALIDATOR_KEY=your-blockchain-validator-private-key-here
BLOCKCHAIN_NODE_ID=your-blockchain-node-id-here

# =============================================================================
# SESSION MANAGEMENT SECRETS
# =============================================================================
# Session encryption keys
SESSION_ENCRYPTION_KEY=your-session-encryption-key-here
SESSION_SIGNING_KEY=your-session-signing-key-here
CHUNK_ENCRYPTION_KEY=your-chunk-encryption-key-here

# =============================================================================
# RDP SERVICE SECRETS
# =============================================================================
# RDP connection secrets
RDP_ADMIN_PASSWORD=your-rdp-admin-password-here
XRDP_PASSWORD=your-xrdp-password-here
RDP_SESSION_KEY=your-rdp-session-key-here

# =============================================================================
# NODE MANAGEMENT SECRETS
# =============================================================================
# Node operator secrets
NODE_OPERATOR_KEY=your-node-operator-private-key-here
POOT_VALIDATION_SECRET=your-poot-validation-secret-here
NODE_REGISTRATION_TOKEN=your-node-registration-token-here

# =============================================================================
# MONITORING SECRETS
# =============================================================================
# Monitoring and alerting
PROMETHEUS_SECRET=your-prometheus-secret-here
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-here
ALERTMANAGER_WEBHOOK_SECRET=your-alertmanager-webhook-secret-here

# =============================================================================
# EXTERNAL SERVICE SECRETS
# =============================================================================
# External service API keys
TOR_CONTROL_PASSWORD=your-tor-control-password-here
DOCKER_REGISTRY_PASSWORD=your-docker-registry-password-here
GITHUB_TOKEN=your-github-token-here

# =============================================================================
# BACKUP SECRETS
# =============================================================================
# Backup encryption keys
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_SIGNING_KEY=your-backup-signing-key-here

# =============================================================================
# DEVELOPMENT SECRETS (ONLY FOR DEV/TEST)
# =============================================================================
# Development and testing secrets
DEV_JWT_SECRET=dev-jwt-secret-for-testing-only
DEV_MONGODB_PASSWORD=dev-mongodb-password
DEV_REDIS_PASSWORD=dev-redis-password
TEST_API_KEY=test-api-key-for-testing-only

# =============================================================================
# SECRET ROTATION CONFIGURATION
# =============================================================================
# Secret rotation intervals (in days)
JWT_ROTATION_INTERVAL=90
DATABASE_ROTATION_INTERVAL=180
TRON_ROTATION_INTERVAL=365
ADMIN_ROTATION_INTERVAL=90
SESSION_ROTATION_INTERVAL=30

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
# Encryption algorithms and settings
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_DERIVATION_FUNCTION=PBKDF2
KEY_DERIVATION_ITERATIONS=100000
SECRET_STORAGE_FORMAT=encrypted

# =============================================================================
# SECURITY COMPLIANCE
# =============================================================================
# Security compliance settings
SECRET_MIN_LENGTH=32
SECRET_COMPLEXITY_REQUIRED=true
SECRET_HISTORY_RETENTION=5
SECRET_AUDIT_LOGGING=true
