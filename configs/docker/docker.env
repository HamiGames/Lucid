# Docker Environment Configuration
# Step 45: Docker Compose Configurations - Environment Variables
# Master environment file for all Docker Compose configurations

# ===========================================
# REGISTRY AND IMAGE CONFIGURATION
# ===========================================

# Container Registry
LUCID_REGISTRY=ghcr.io
LUCID_IMAGE_NAME=HamiGames/Lucid
LUCID_TAG=latest

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB Configuration
LUCID_MONGODB_ROOT_USERNAME=lucid
LUCID_MONGODB_ROOT_PASSWORD=lucid
LUCID_MONGODB_DATABASE=lucid
MONGO_INITDB_ROOT_USERNAME=lucid
MONGO_INITDB_ROOT_PASSWORD=lucid
MONGO_INITDB_DATABASE=lucid

# Redis Configuration
REDIS_PASSWORD=
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Elasticsearch Configuration
ES_JAVA_OPTS=-Xms512m -Xmx512m
ELASTICSEARCH_CLUSTER_NAME=lucid-cluster

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================

# JWT Configuration
JWT_SECRET_KEY=lucid_jwt_secret_key_change_in_production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Authentication Features
HARDWARE_WALLET_ENABLED=true
RBAC_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# ===========================================
# API GATEWAY CONFIGURATION
# ===========================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Consensus Algorithm
CONSENSUS_ALGORITHM=PoOT
BLOCK_TIME_SECONDS=10
MAX_TRANSACTIONS_PER_BLOCK=1000

# ===========================================
# SESSION MANAGEMENT CONFIGURATION
# ===========================================

# Session Pipeline
PIPELINE_STATE_MACHINE_ENABLED=true
CHUNK_SIZE_MB=10
COMPRESSION_LEVEL=6

# Session Recording
RECORDING_QUALITY=high
CHUNK_DURATION_SECONDS=30

# Session Processing
ENCRYPTION_ALGORITHM=AES-256-GCM
WORKER_COUNT=10

# Session Storage
STORAGE_ROOT_PATH=/app/storage
MAX_STORAGE_SIZE_GB=1000

# ===========================================
# RDP SERVICES CONFIGURATION
# ===========================================

# RDP Server Manager
PORT_RANGE_START=13389
PORT_RANGE_END=14389
MAX_CONCURRENT_SESSIONS=100

# XRDP Configuration
XRDP_DISPLAY=:10
XRDP_PORT=3389

# RDP Monitoring
MONITORING_INTERVAL_SECONDS=30
METRICS_ENABLED=true

# ===========================================
# NODE MANAGEMENT CONFIGURATION
# ===========================================

# Node Features
POOT_ENABLED=true
PAYOUT_PROCESSING_ENABLED=true

# ===========================================
# TRON PAYMENT CONFIGURATION
# ===========================================

# TRON Network Configuration
TRON_NETWORK=shasta
TRON_MAINNET_URL=https://api.trongrid.io
TRON_TESTNET_URL=https://api.shasta.trongrid.io
TRON_PRIVATE_KEY=

# USDT Configuration
USDT_TRC20_ADDRESS=TG3XXyExBkPp9nzdajDZsozEu4BkaSJozs

# Payment Features
PAYOUT_V0_ENABLED=true
PAYOUT_KYC_ENABLED=true
WALLET_ENCRYPTION_ENABLED=true
STAKING_ENABLED=true
STAKING_REWARDS_ENABLED=true

# ===========================================
# ADMIN INTERFACE CONFIGURATION
# ===========================================

# Admin Features
RBAC_ENABLED=true
AUDIT_LOGGING_ENABLED=true
EMERGENCY_CONTROLS_ENABLED=true

# ===========================================
# SERVICE MESH CONFIGURATION
# ===========================================

# Consul Configuration
CONSUL_DATACENTER=lucid-dc
CONSUL_SERVER=true
CONSUL_BOOTSTRAP_EXPECT=1
CONSUL_BIND_INTERFACE=eth0
CONSUL_CLIENT_INTERFACE=eth0

# ===========================================
# BACKUP AND RETENTION CONFIGURATION
# ===========================================

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Levels
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Main Network
LUCID_NETWORK_SUBNET=172.20.0.0/16
LUCID_NETWORK_GATEWAY=172.20.0.1

# Isolated Network (TRON Services)
LUCID_ISOLATED_NETWORK_SUBNET=172.21.0.0/16
LUCID_ISOLATED_NETWORK_GATEWAY=172.21.0.1

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Security Features
SECURITY_SCANNING_ENABLED=true
VULNERABILITY_SCANNING_ENABLED=true
CONTAINER_SIGNING_ENABLED=true

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Features
DEV_MODE=false
HOT_RELOAD=false
DEBUG_PORT=5678

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# Production Settings
PRODUCTION_MODE=true
OPTIMIZE_FOR_PRODUCTION=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory Limits
DEFAULT_MEMORY_LIMIT=512m
DATABASE_MEMORY_LIMIT=1g
CACHE_MEMORY_LIMIT=256m

# CPU Limits
DEFAULT_CPU_LIMIT=0.5
DATABASE_CPU_LIMIT=1.0
CACHE_CPU_LIMIT=0.25
