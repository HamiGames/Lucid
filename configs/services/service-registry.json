{
  "version": "1.0.0",
  "last_updated": "2026-02-25",
  "service_registry": {
    "gui-docker-manager": {
      "name": "GUI Docker Manager",
      "version": "1.0.0",
      "port": 8098,
      "host": "lucid-gui-docker-manager",
      "protocol": "http",
      "api_base": "/api/v1",
      "status_endpoint": "/health",
      "description": "Docker container and service management API",
      "dependencies": {
        "lucid-mongodb": {
          "purpose": "metrics storage",
          "critical": true,
          "healthcheck": true
        },
        "lucid-redis": {
          "purpose": "caching",
          "critical": true,
          "healthcheck": true
        },
        "api-gateway": {
          "purpose": "routing",
          "critical": false,
          "healthcheck": true
        }
      },
      "endpoints": {
        "containers": "/containers",
        "services": "/services",
        "compose": "/compose",
        "networks": "/networks",
        "volumes": "/volumes",
        "health": "/health"
      },
      "security": {
        "authentication": "JWT",
        "authorization": "RBAC",
        "tls_enabled": false
      }
    },
    "gui-api-bridge": {
      "name": "GUI API Bridge",
      "version": "1.0.0",
      "port": 8102,
      "host": "lucid-gui-api-bridge",
      "protocol": "http",
      "api_base": "/api/v1",
      "status_endpoint": "/health",
      "description": "API gateway and bridge for GUI services",
      "dependencies": {
        "api-gateway": {
          "purpose": "backend routing",
          "critical": true,
          "healthcheck": true
        },
        "lucid-mongodb": {
          "purpose": "data storage",
          "critical": true,
          "healthcheck": true
        }
      }
    },
    "gui-tor-manager": {
      "name": "GUI Tor Manager",
      "version": "1.0.0",
      "port": 8097,
      "host": "lucid-gui-tor-manager",
      "protocol": "http",
      "api_base": "/api/v1",
      "status_endpoint": "/health",
      "description": "Tor network management and onion address handling",
      "dependencies": {
        "tor-proxy": {
          "purpose": "tor control",
          "critical": true,
          "healthcheck": true
        }
      }
    },
    "gui-hardware-manager": {
      "name": "GUI Hardware Manager",
      "version": "1.0.0",
      "port": 8099,
      "host": "lucid-gui-hardware-manager",
      "protocol": "http",
      "api_base": "/api/v1",
      "status_endpoint": "/health",
      "description": "Hardware wallet and device management",
      "dependencies": {
        "api-gateway": {
          "purpose": "backend access",
          "critical": true,
          "healthcheck": true
        },
        "lucid-mongodb": {
          "purpose": "device registry",
          "critical": true,
          "healthcheck": true
        }
      }
    }
  },
  "service_groups": {
    "foundation": {
      "priority": 1,
      "services": ["lucid-mongodb", "lucid-redis", "lucid-elasticsearch", "lucid-auth-service"]
    },
    "core": {
      "priority": 2,
      "services": ["api-gateway", "blockchain-engine", "service-mesh"]
    },
    "application": {
      "priority": 3,
      "services": ["lucid-session-pipeline", "lucid-node-management"]
    },
    "gui": {
      "priority": 4,
      "services": ["lucid-gui-api-bridge", "lucid-gui-docker-manager", "lucid-gui-tor-manager", "lucid-gui-hardware-manager"]
    },
    "support": {
      "priority": 5,
      "services": ["lucid-admin-interface", "lucid-tron-client"]
    }
  },
  "networks": {
    "lucid-pi-network": {
      "type": "bridge",
      "scope": "local",
      "description": "Primary Lucid platform network",
      "services": ["all"]
    },
    "lucid-gui-network": {
      "type": "bridge",
      "scope": "local",
      "description": "GUI-specific communication network",
      "services": ["gui"]
    }
  },
  "volumes": {
    "logs": {
      "path": "/mnt/myssd/Lucid/Lucid/logs",
      "driver": "local",
      "purpose": "service logging"
    },
    "data": {
      "path": "/mnt/myssd/Lucid/Lucid/data",
      "driver": "local",
      "purpose": "service data storage"
    },
    "blockchain-data": {
      "path": "/mnt/myssd/Lucid/Lucid/blockchain/data",
      "driver": "local",
      "purpose": "blockchain storage"
    }
  }
}
