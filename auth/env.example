# ============================================================================
# Lucid Authentication Service - Environment Variables Template
# Cluster 09: Authentication Service
# ============================================================================
#
# This file provides a template for all environment variables required by the
# authentication service. Copy this file to .env and fill in actual values.
#
# IMPORTANT: Never commit .env files with real values to version control!
#
# File Reference: auth/env.example (copy to .env)
# Associated: auth/config.py, auth/docker-compose.yml
#
# ============================================================================

# ============================================================================
# Service Configuration
# ============================================================================

# Service identification
SERVICE_NAME=lucid-auth-service
AUTH_SERVICE_PORT=8089

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# JWT Token Configuration (REQUIRED)
# ============================================================================

# JWT secret key (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars

# JWT algorithm
JWT_ALGORITHM=HS256

# Token expiry
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/lucid_auth
MONGODB_DATABASE=lucid_auth
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis
REDIS_URI=redis://redis:6379/1
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# ============================================================================
# Security Configuration
# ============================================================================

BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_COOLDOWN_MINUTES=15
PASSWORD_MIN_LENGTH=12

# ============================================================================
# Hardware Wallet Configuration
# ============================================================================

ENABLE_HARDWARE_WALLET=true
LEDGER_SUPPORTED=true
TREZOR_SUPPORTED=true
KEEPKEY_SUPPORTED=true
HW_WALLET_TIMEOUT_SECONDS=30

# ============================================================================
# TRON Network Configuration
# ============================================================================

TRON_NETWORK=mainnet
TRON_SIGNATURE_MESSAGE="Sign this message to authenticate with Lucid: {timestamp}"
TRON_ADDRESS_PREFIX=T

# ============================================================================
# Rate Limiting Configuration
# ============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PUBLIC=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_ADMIN=10000

# ============================================================================
# CORS Configuration
# ============================================================================

CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://lucid.onion
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Audit Logging Configuration
# ============================================================================

AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_SENSITIVE_FIELDS=password,private_key,signature,secret

# ============================================================================
# Session Configuration
# ============================================================================

SESSION_CLEANUP_INTERVAL_HOURS=1
SESSION_MAX_CONCURRENT_PER_USER=5
SESSION_IDLE_TIMEOUT_MINUTES=30

# ============================================================================
# Integration URLs
# ============================================================================

API_GATEWAY_URL=http://api-gateway:8080
CONSUL_HOST=consul:8500
SERVICE_MESH_ENABLED=false

# ============================================================================
# Monitoring Configuration
# ============================================================================

METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_SECONDS=30

# ============================================================================
# Backup Configuration
# ============================================================================

BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Usage: cp env.example .env and update values
# ============================================================================

