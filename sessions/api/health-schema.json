{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Session API Health Check Response Schema",
  "description": "JSON schema for the health check endpoint response of the Session API service",
  "type": "object",
  "required": [
    "status",
    "timestamp"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy", "unhealthy"],
      "description": "Overall health status of the service",
      "example": "healthy"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the health check was performed",
      "example": "2024-01-27T12:34:56.789Z"
    },
    "error": {
      "type": "string",
      "description": "Error message if status is unhealthy",
      "example": "Session API not initialized"
    },
    "services": {
      "type": "object",
      "description": "Health status of individual services",
      "properties": {
        "mongodb": {
          "type": "string",
          "enum": ["healthy", "unhealthy"],
          "description": "MongoDB connection health status"
        },
        "session_storage": {
          "type": "object",
          "description": "Session storage service health status",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["healthy", "unhealthy"]
            }
          }
        },
        "chunk_store": {
          "type": "object",
          "description": "Chunk store service health status",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["healthy", "unhealthy"]
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "healthy",
      "timestamp": "2024-01-27T12:34:56.789Z",
      "services": {
        "mongodb": "healthy",
        "session_storage": {
          "status": "healthy"
        },
        "chunk_store": {
          "status": "healthy"
        }
      }
    },
    {
      "status": "unhealthy",
      "error": "Session API not initialized",
      "timestamp": "2024-01-27T12:34:56.789Z"
    }
  ]
}

