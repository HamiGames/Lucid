# GUI Tor Manager Environment Variables Template
# Copy this file to .env and fill in the required values
# Location: gui-tor-manager/gui-tor-manager/config/env.gui-tor-manager.template

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Service name for identification
SERVICE_NAME=lucid-gui-tor-manager

# FastAPI service port (must be 1-65535)
PORT=8097

# FastAPI host binding (must not be localhost/127.0.0.1, use service name)
HOST=0.0.0.0

# Service URL for service discovery
SERVICE_URL=http://lucid-gui-tor-manager:8097

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Environment (production, staging, development)
LUCID_ENV=production

# Platform architecture (arm64, amd64)
LUCID_PLATFORM=arm64

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Debug mode flag (true/false)
DEBUG=false

# ============================================================================
# TOR PROXY CONNECTION
# ============================================================================

# Tor proxy service control port URL
# Format: http://host:port (must not use localhost)
TOR_PROXY_URL=http://tor-proxy:9051

# Tor proxy service host name
TOR_PROXY_HOST=tor-proxy

# Tor SOCKS proxy port (reference only, for client configuration)
TOR_SOCKS_PORT=9050

# Tor control protocol port (reference only, for configuration)
TOR_CONTROL_PORT=9051

# ============================================================================
# TOR CONFIGURATION
# ============================================================================

# Tor data directory path
TOR_DATA_DIR=/app/tor-data

# Tor logging level (debug, info, notice, warn, err)
TOR_LOG_LEVEL=notice

# Enable GUI Tor integration (true/false)
GUI_TOR_INTEGRATION=true

# Enable onion address masking (true/false)
ONION_ADDRESS_MASKING=true

# ============================================================================
# DATABASE (OPTIONAL)
# ============================================================================

# MongoDB connection URL (optional, for persistent state storage)
# Format: mongodb://user:pass@host:port/database
# Must not use localhost/127.0.0.1, use service names
# MONGODB_URL=mongodb://lucid:password@lucid-mongodb:27017/lucid?authSource=admin

# Redis connection URL (optional, for caching)
# Format: redis://[:password]@host:port/database
# Must not use localhost/127.0.0.1, use service names
# REDIS_URL=redis://:password@lucid-redis:6379/0

# ============================================================================
# NOTES
# ============================================================================
# - All URLs must use service names, not localhost/127.0.0.1
# - All port numbers must be valid (1-65535)
# - LUCID_ENV should be 'production' for Pi deployment
# - LUCID_PLATFORM should be 'arm64' for Raspberry Pi, 'amd64' for x86_64
# - TOR_PROXY_URL points to foundation tor-proxy service control port
# - Onion state is shared via /run/lucid/onion volume from tor-proxy
