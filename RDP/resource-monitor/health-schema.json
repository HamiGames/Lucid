{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RDP Resource Monitor Health Check Response Schema",
  "description": "JSON schema for the health check endpoint response",
  "type": "object",
  "required": [
    "status",
    "service",
    "version",
    "active_sessions",
    "timestamp"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy"],
      "description": "Health status of the service. Always 'healthy' for 200 response",
      "example": "healthy"
    },
    "service": {
      "type": "string",
      "description": "Service identifier",
      "example": "rdp-resource-monitor",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Service version",
      "example": "1.0.0",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "active_sessions": {
      "type": "integer",
      "description": "Number of currently active monitored sessions",
      "minimum": 0,
      "example": 5
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the health check",
      "example": "2025-01-27T12:00:00Z"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "healthy",
      "service": "rdp-resource-monitor",
      "version": "1.0.0",
      "active_sessions": 5,
      "timestamp": "2025-01-27T12:00:00Z"
    },
    {
      "status": "healthy",
      "service": "rdp-resource-monitor",
      "version": "1.0.0",
      "active_sessions": 0,
      "timestamp": "2025-01-27T12:00:00Z"
    }
  ]
}

