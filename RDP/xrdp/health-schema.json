{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XRDP API Health Check Response Schema",
  "description": "Schema for health check endpoint response",
  "type": "object",
  "required": [
    "status",
    "service",
    "version",
    "timestamp",
    "active_processes",
    "max_processes"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy"],
      "description": "Health status of the service"
    },
    "service": {
      "type": "string",
      "description": "Service name",
      "example": "xrdp-service"
    },
    "version": {
      "type": "string",
      "description": "Service version",
      "example": "1.0.0"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the health check"
    },
    "active_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of currently active XRDP processes"
    },
    "max_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Maximum number of concurrent XRDP processes"
    }
  },
  "additionalProperties": false
}

