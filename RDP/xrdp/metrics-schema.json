{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XRDP API Statistics Response Schema",
  "description": "Schema for statistics endpoint response",
  "type": "object",
  "required": [
    "timestamp"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the statistics"
    },
    "total_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of XRDP processes"
    },
    "active_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of currently active XRDP processes"
    },
    "stopped_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of stopped XRDP processes"
    },
    "failed_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of failed XRDP processes"
    },
    "max_processes": {
      "type": "integer",
      "minimum": 0,
      "description": "Maximum number of concurrent XRDP processes"
    }
  },
  "additionalProperties": true
}

