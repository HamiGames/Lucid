{
  "name": "lucid-api-documentation",
  "version": "1.0.0",
  "description": "API documentation for the Lucid blockchain system",
  "main": "generate-docs.js",
  "scripts": {
    "start": "node generate-docs.js",
    "dev": "nodemon generate-docs.js",
    "build": "npm run generate:docs && npm run generate:sdks",
    "generate:docs": "./scripts/docs/generate-openapi.sh --docs",
    "generate:sdks": "./scripts/docs/generate-openapi.sh --sdks",
    "validate": "./scripts/docs/generate-openapi.sh --validate",
    "clean": "./scripts/docs/generate-openapi.sh --clean",
    "serve": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "api",
    "documentation",
    "openapi",
    "swagger",
    "blockchain",
    "lucid"
  ],
  "author": "Lucid Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HamiGames/Lucid.git",
    "directory": "docs/api"
  },
  "bugs": {
    "url": "https://github.com/HamiGames/Lucid/issues"
  },
  "homepage": "https://docs.lucid-blockchain.org",
  "dependencies": {
    "swagger-ui-dist": "^4.15.5",
    "redoc-cli": "^0.13.21",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@redocly/cli": "^1.0.0-beta.123",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "yaml": "^2.3.2",
    "js-yaml": "^4.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.5",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "@types/node": "^20.3.1",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/js-yaml": "^4.0.5",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/generated/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
