# LUCID TRON Staking Service - Environment Variable Template
# File: payment-systems/tron/env.staking.template
# Purpose: Template for required environment variables for tron-staking service
# Usage: Copy this file to .env.staking and fill in the values

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Service name and version
SERVICE_NAME=tron-staking
SERVICE_VERSION=1.0.0

# Service host and port
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8095
STAKING_PORT=8095

# Environment
ENVIRONMENT=production  # development, staging, production

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log format
LOG_FORMAT=json  

# Access logging
ACCESS_LOG=true

# Debug mode
DEBUG=false

# ============================================================================
# TRON NETWORK CONFIGURATION
# ============================================================================

# TRON network
TRON_NETWORK=mainnet  # mainnet, testnet, shasta

# TRON node RPC URLs
TRON_RPC_MAINNET=https://api.tronstack.io
TRON_RPC_TESTNET=https://api.shasta.trongrid.io
TRON_RPC_SHASTA=https://api.shasta.trongrid.io

# TRON client service URL (internal)
TRON_CLIENT_URL=http://lucid-tron-client:8091
TRX_STAKING_TRON_CLIENT_URL=http://lucid-tron-client:8091

# ============================================================================
# TRON CLIENT INTEGRATION
# ============================================================================

# TRON API key (for Trongrid)
TRON_API_KEY=${TRON_API_KEY}

# TRON API timeout
TRON_API_TIMEOUT=30

# TRON max retries for API calls
TRON_API_RETRIES=3

# ============================================================================
# STAKING CONFIGURATION
# ============================================================================

# Default private key (optional, can be provided per request)
DEFAULT_PRIVATE_KEY=${DEFAULT_PRIVATE_KEY}

# Minimum staking amount
MIN_STAKING_AMOUNT=1

# Maximum staking amount
MAX_STAKING_AMOUNT=10000000

# Minimum staking duration (days)
MIN_STAKING_DURATION=1

# Maximum staking duration (days)
MAX_STAKING_DURATION=365

# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================

# MongoDB connection URL
MONGODB_URL=mongodb://lucid-mongodb:27017

# MongoDB database name
MONGODB_DATABASE=lucid_payment_systems

# MongoDB username (optional)
MONGODB_USERNAME=${MONGODB_USERNAME}

# MongoDB password (optional)
MONGODB_PASSWORD=${MONGODB_PASSWORD}

# MongoDB authentication source (optional)
MONGODB_AUTH_SOURCE=${MONGODB_AUTH_SOURCE}

# MongoDB connection pool size
MONGODB_POOL_SIZE=10

# MongoDB timeout
MONGODB_TIMEOUT=30

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis URL
REDIS_URL=redis://lucid-redis:6379

# Redis database
REDIS_DB=0

# Redis password (optional)
REDIS_PASSWORD=${REDIS_PASSWORD}

# Redis timeout
REDIS_TIMEOUT=10

# Redis key prefix
REDIS_KEY_PREFIX=lucid:tron:staking

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Key
API_KEY=${API_KEY}

# JWT secret
JWT_SECRET=${JWT_SECRET}

# JWT algorithm
JWT_ALGORITHM=HS256

# JWT expiration (hours)
JWT_EXPIRATION_HOURS=24

# CORS origins (comma-separated)
CORS_ORIGINS=*

# CORS allow credentials
CORS_ALLOW_CREDENTIALS=true

# CORS allow methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# CORS allow headers
CORS_HEADERS=*

# ============================================================================
# RATE LIMITING
# ============================================================================

# Global rate limit (requests per second)
GLOBAL_RATE_LIMIT=100

# Per-IP rate limit (requests per minute)
PER_IP_RATE_LIMIT=500

# Per-user rate limit (requests per minute)
PER_USER_RATE_LIMIT=300

# Endpoint-specific rate limits (requests per minute)
STAKE_ENDPOINT_RATE_LIMIT=60
UNSTAKE_ENDPOINT_RATE_LIMIT=60
VOTE_ENDPOINT_RATE_LIMIT=100
DELEGATE_ENDPOINT_RATE_LIMIT=100

# ============================================================================
# AML/KYC CONFIGURATION
# ============================================================================

# Enable KYC verification
KYC_ENABLED=true

# Enable AML checks
AML_ENABLED=true

# Sanctions list check
SANCTIONS_CHECK_ENABLED=true

# PEP (Politically Exposed Persons) check
PEP_CHECK_ENABLED=true

# High-risk detection enabled
HIGH_RISK_DETECTION_ENABLED=true

# ============================================================================
# DATA DIRECTORY CONFIGURATION
# ============================================================================

# Data directory base path
DATA_DIRECTORY=/data/payment-systems

# TRON data directory
TRON_DATA_DIR=/data/payment-systems

# Staking data directory
STAKING_DATA_DIR=/data/payment-systems/trx-staking

# ============================================================================
# METRICS CONFIGURATION
# ============================================================================

# Enable metrics
METRICS_ENABLED=true

# Metrics port
METRICS_PORT=9095

# Metrics path
METRICS_PATH=/metrics

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================

# Enable notifications
NOTIFICATIONS_ENABLED=true

# Notification channels (comma-separated: email, webhook, sms)
NOTIFICATION_CHANNELS=email,webhook

# Email configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=${SMTP_FROM}
SMTP_TO=${SMTP_TO}

# Webhook configuration
WEBHOOK_URL=${WEBHOOK_URL}

# Slack configuration
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# ============================================================================
# TRANSACTION MONITORING
# ============================================================================

# Enable transaction monitoring
TRANSACTION_MONITORING_ENABLED=true

# High-value transaction threshold
HIGH_VALUE_TRANSACTION_THRESHOLD=50000

# Daily transaction volume limit
DAILY_TRANSACTION_VOLUME_LIMIT=5000000

# ============================================================================
# APPROVAL WORKFLOW CONFIGURATION
# ============================================================================

# Enable approval workflows
APPROVAL_WORKFLOWS_ENABLED=true

# High-value staking approval required (amount in TRX)
HIGH_VALUE_STAKING_APPROVAL_THRESHOLD=50000

# Large delegation approval required (amount in TRX)
LARGE_DELEGATION_APPROVAL_THRESHOLD=100000

# Approval timeout (hours)
APPROVAL_TIMEOUT_HOURS=24

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Maintenance window (cron format)
MAINTENANCE_WINDOW="0 2 * * 0"  # Sunday at 02:00 UTC

# ============================================================================
# AUDIT & COMPLIANCE
# ============================================================================

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# Audit log retention (days)
AUDIT_LOG_RETENTION_DAYS=90

# Mask sensitive fields in logs
MASK_SENSITIVE_FIELDS=true

# Compliance standard (SOC2, AML, KYC, GDPR)
COMPLIANCE_STANDARDS=SOC2,AML,KYC,GDPR

# ============================================================================
# INTEGRATION CONFIGURATION
# ============================================================================

# Lucid API base URL
LUCID_API_BASE_URL=http://lucid-api:8080

# Lucid MongoDB URL (if different from main MONGODB_URL)
LUCID_MONGODB_URL=mongodb://lucid-mongodb:27017

# Lucid Redis URL (if different from main REDIS_URL)
LUCID_REDIS_URL=redis://lucid-redis:6379

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Number of worker threads
WORKERS=4

# Request timeout (seconds)
TIMEOUT=30

# Connection pool size
CONNECTION_POOL_SIZE=10

# Queue size
QUEUE_SIZE=1000

# Task timeout (seconds)
TASK_TIMEOUT=300

# Keep alive timeout (seconds)
KEEP_ALIVE_TIMEOUT=30

# ============================================================================
# EXPERIMENTAL/OPTIONAL FEATURES
# ============================================================================

# Enable experimental features
EXPERIMENTAL_FEATURES_ENABLED=false

# Feature flags (comma-separated)
FEATURE_FLAGS=${FEATURE_FLAGS}

# Beta API enabled
BETA_API_ENABLED=false

# ============================================================================
# NOTES
# ============================================================================
# - Sensitive values (API keys, passwords) should be stored in a secure vault
# - Never commit .env files with real values to version control
# - Use different values for development, staging, and production environments
# - Ensure all required variables are set before starting the service
# - Review security policies in config/staking-security-policies.yaml
# - Review error codes in config/staking-error-codes.yaml
