# LUCID TRX STAKING - SPEC-1B Implementation
# Distroless TRX staking service (Phase 4 support) aligned with plan/constants/
# Configuration: .env.support, .env.trx-staking, .env.secrets, .env.foundation via docker-compose
# Build context: project root (all COPY statements use payment-systems/tron/ prefixes)
# Target image: pickme/lucid-trx-staking:latest-arm64
# Pattern: Dockerfile-copy-pattern.md + dockerfile-design.md

# syntax=docker/dockerfile:1.5

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0
ARG TARGETPLATFORM=linux/arm64
ARG BUILDPLATFORM=linux/amd64
ARG PYTHON_VERSION=3.11

############################
# Stage 1: Builder
############################
FROM --platform=$TARGETPLATFORM python:${PYTHON_VERSION}-slim-bookworm AS builder

ARG BUILDPLATFORM
ARG TARGETPLATFORM
ARG PYTHON_VERSION

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_PREFER_BINARY=1 \
    DEBIAN_FRONTEND=noninteractive

WORKDIR /build

# Install system dependencies
RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    rm -rf /var/lib/apt/lists/* && \
    apt-get update --allow-releaseinfo-change && \
    apt-get install -y --no-install-recommends \
        build-essential \
        gcc \
        g++ \
        libffi-dev \
        libssl-dev \
        libxml2-dev \
        libxslt1-dev \
        zlib1g-dev \
        pkg-config \
        curl \
        ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Create system directory markers (ensures COPY won't fail silently in distroless)
RUN echo "LUCID_TRX_STAKING_RUNTIME_DIRECTORY" > /var/run/.keep && \
    echo "LUCID_TRX_STAKING_LIB_DIRECTORY" > /var/lib/.keep && \
    chown -R 65532:65532 /var/run /var/lib

# Create Python virtual environment
RUN python -m venv /opt/venv

# Upgrade pip, setuptools, wheel
RUN --mount=type=cache,target=/root/.cache/pip \
    /opt/venv/bin/pip install --upgrade pip setuptools wheel

# Copy requirements
COPY payment-systems/tron/requirements.txt ./requirements.txt
COPY payment-systems/tron/requirements-prod.txt ./requirements-prod.txt

# Install Python packages
RUN --mount=type=cache,target=/root/.cache/pip \
    --mount=type=cache,target=/root/.cache/pip/wheels \
    /opt/venv/bin/pip install --prefer-binary -r requirements.txt -r requirements-prod.txt

# Create marker files with actual content (ensures directory structure is locked in)
# Following Dockerfile-copy-pattern.md pattern - CRITICAL for distroless
RUN echo "LUCID_TRX_STAKING_PACKAGES_INSTALLED_$(date +%s)" > /opt/venv/lib/python${PYTHON_VERSION}/site-packages/.lucid-marker && \
    echo "LUCID_TRX_STAKING_BINARIES_INSTALLED_$(date +%s)" > /opt/venv/bin/.lucid-marker && \
    chown -R 65532:65532 /opt/venv

# Verify critical packages installed in builder stage
RUN /opt/venv/bin/python -c "import fastapi, uvicorn, tronpy, httpx, aiofiles, pydantic, pydantic_settings, motor, pymongo; print('✅ critical packages installed')" && \
    /opt/venv/bin/python -c "import uvicorn; print('✅ uvicorn location:', uvicorn.__file__)" && \
    /opt/venv/bin/python -c "import motor; print('✅ motor location:', motor.__file__)" && \
    test -d /opt/venv/lib/python${PYTHON_VERSION}/site-packages && \
    echo "✅ Directory exists: /opt/venv/lib/python${PYTHON_VERSION}/site-packages" && \
    test -f /opt/venv/lib/python${PYTHON_VERSION}/site-packages/.lucid-marker && \
    test -s /opt/venv/lib/python${PYTHON_VERSION}/site-packages/.lucid-marker && \
    echo "✅ Marker file verified in builder (non-empty)" && \
    ls -la /opt/venv/lib/python${PYTHON_VERSION}/site-packages/ | head -20 && \
    echo "✅ Package count: $(ls -1 /opt/venv/lib/python${PYTHON_VERSION}/site-packages/ | wc -l)"

# Copy application code
COPY payment-systems/tron/ ./app/

# Compile Python bytecode for faster startup
RUN /opt/venv/bin/python -m compileall -b /app

############################
# Stage 2: Runtime
############################
FROM --platform=$TARGETPLATFORM gcr.io/distroless/python3-debian12:latest

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION

# OCI Image metadata and Lucid-specific labels
LABEL maintainer="Lucid Development Team" \
      version="${VERSION}" \
      description="Lucid TRX Staking service (distroless)" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.title="Lucid TRX Staking" \
      org.opencontainers.image.description="TRX staking orchestration for Lucid payments" \
      org.opencontainers.image.source="https://github.com/HamiGames/Lucid" \
      com.lucid.plane="support" \
      com.lucid.service="trx-staking" \
      com.lucid.platform="arm64" \
      com.lucid.architecture="linux/arm64" \
      com.lucid.security="distroless" \
      com.lucid.vulnerabilities="zero" \
      com.lucid.expose="8096,8105" \
      com.lucid.cluster="payment" \
      com.lucid.env.config=".env.support,.env.trx-staking,.env.secrets,.env.foundation" \
      com.lucid.deployment.path="/mnt/myssd/Lucid/Lucid" \
      com.lucid.tor.compatible="true"

# Environment configuration
ENV PATH=/opt/venv/bin:/usr/local/bin:/usr/bin:/bin \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app:/opt/venv/lib/python3.11/site-packages \
    PYTHONIOENCODING=utf-8 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    SERVICE_PORT=8096 \
    WORKERS=1 \
    SERVICE_HOST=0.0.0.0 \
    LOG_LEVEL=INFO

WORKDIR /app

# Copy system directories from builder (with content markers already in place)
COPY --from=builder --chown=65532:65532 /var/run /var/run
COPY --from=builder --chown=65532:65532 /var/lib /var/lib

# Copy CA certificates
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/ca-certificates.crt

# Copy Python virtual environment (directory already populated with packages + marker files)
COPY --from=builder --chown=65532:65532 /opt/venv /opt/venv

# Copy application code
COPY --from=builder --chown=65532:65532 /build/app /app

# Expose service ports
EXPOSE 8096 8105

# Health check - verifies service is running and responding
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD ["/opt/venv/bin/python3", "-c", "import os; import urllib.request; port = os.getenv('SERVICE_PORT', '8096'); urllib.request.urlopen(f'http://localhost:{port}/health').read(); exit(0)"]

# Set non-root user (65532 = nonroot in distroless)
USER 65532:65532

# Verify packages were copied successfully (fails build if missing)
# Critical: This catches COPY failures immediately and prevents runtime errors
RUN ["/opt/venv/bin/python3", "-c", "import sys; import os; site_packages = '/opt/venv/lib/python3.11/site-packages'; assert os.path.exists(site_packages), f'{site_packages} does not exist'; assert os.path.exists(os.path.join(site_packages, 'fastapi')), 'fastapi not found'; assert os.path.exists(os.path.join(site_packages, 'uvicorn')), 'uvicorn not found'; assert os.path.exists(os.path.join(site_packages, 'motor')), 'motor not found'; assert os.path.exists(os.path.join(site_packages, 'tronpy')), 'tronpy not found'; assert os.path.exists(os.path.join(site_packages, '.lucid-marker')), 'marker file not found'; marker_path = os.path.join(site_packages, '.lucid-marker'); assert os.path.getsize(marker_path) > 0, 'marker file is empty: ' + marker_path; print('✅ All packages verified in runtime stage')"]

# Entrypoint and command
ENTRYPOINT []
CMD ["/opt/venv/bin/python3", "trx_staking_entrypoint.py"]
