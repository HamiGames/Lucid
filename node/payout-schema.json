{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node Management Payout Schema",
  "description": "JSON schema for Payout information models used by the Node Management service",
  "definitions": {
    "PayoutStatus": {
      "type": "string",
      "enum": ["pending", "processing", "completed", "failed", "cancelled"],
      "description": "Payout processing status enumeration"
    },
    "PayoutInfo": {
      "type": "object",
      "required": [
        "payout_id",
        "node_id",
        "amount_usdt",
        "fee_usdt",
        "net_amount_usdt",
        "payout_address",
        "status",
        "created_at"
      ],
      "properties": {
        "payout_id": {
          "type": "string",
          "description": "Unique payout identifier",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "example": "payout_abc123"
        },
        "node_id": {
          "type": "string",
          "description": "Node identifier",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "example": "node_xyz789"
        },
        "amount_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0.000001,
          "maximum": 10000.0,
          "description": "Payout amount in USDT",
          "example": 50.0
        },
        "fee_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Processing fee in USDT",
          "example": 0.5
        },
        "net_amount_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Net payout amount after fees (amount_usdt - fee_usdt)",
          "example": 49.5
        },
        "payout_address": {
          "type": "string",
          "description": "Destination wallet address",
          "minLength": 1,
          "example": "TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t"
        },
        "status": {
          "$ref": "#/definitions/PayoutStatus",
          "description": "Current payout status"
        },
        "description": {
          "type": ["string", "null"],
          "description": "Optional payout description",
          "maxLength": 500,
          "example": "Monthly payout for node operations"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Payout creation timestamp (ISO 8601)",
          "example": "2025-01-27T12:00:00Z"
        },
        "processed_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Processing timestamp (ISO 8601)",
          "example": "2025-01-27T12:05:00Z"
        },
        "transaction_id": {
          "type": ["string", "null"],
          "description": "Blockchain transaction ID/hash",
          "example": "0x1234567890abcdef..."
        },
        "transaction_url": {
          "type": ["string", "null"],
          "description": "URL to view transaction on blockchain explorer",
          "format": "uri",
          "example": "https://tronscan.org/#/transaction/..."
        },
        "error_message": {
          "type": ["string", "null"],
          "description": "Error message if payout failed",
          "maxLength": 1000
        }
      },
      "additionalProperties": false
    },
    "PayoutStatistics": {
      "type": "object",
      "required": [
        "total_payouts",
        "total_amount_usdt",
        "total_fees_usdt",
        "total_net_usdt",
        "status_breakdown",
        "recent_payouts_24h",
        "threshold_usdt",
        "processing_fee_percent"
      ],
      "properties": {
        "total_payouts": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of payouts processed",
          "example": 150
        },
        "total_amount_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Total payout amount in USDT",
          "example": 7500.0
        },
        "total_fees_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Total fees collected in USDT",
          "example": 75.0
        },
        "total_net_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Total net payouts in USDT",
          "example": 7425.0
        },
        "status_breakdown": {
          "type": "object",
          "description": "Payout count by status",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          },
          "example": {
            "pending": 5,
            "processing": 2,
            "completed": 140,
            "failed": 2,
            "cancelled": 1
          }
        },
        "recent_payouts_24h": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of payouts processed in last 24 hours",
          "example": 10
        },
        "threshold_usdt": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Payout threshold in USDT",
          "example": 10.0
        },
        "processing_fee_percent": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "maximum": 100,
          "description": "Processing fee percentage",
          "example": 1.0
        }
      },
      "additionalProperties": false
    }
  }
}

