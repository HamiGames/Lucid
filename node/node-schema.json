{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node Management Node Schema",
  "description": "JSON schema for Node information models used by the Node Management service",
  "definitions": {
    "NodeStatus": {
      "type": "string",
      "enum": ["active", "inactive", "maintenance", "offline", "pending"],
      "description": "Node operational status enumeration"
    },
    "NodeInfo": {
      "type": "object",
      "required": [
        "node_id",
        "address",
        "stake_amount",
        "status",
        "created_at"
      ],
      "properties": {
        "node_id": {
          "type": "string",
          "description": "Unique node identifier",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "example": "node_abc123"
        },
        "address": {
          "type": "string",
          "description": "Node address (onion address or IP)",
          "example": "abc123def456.onion"
        },
        "stake_amount": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Stake amount in USDT",
          "example": 1000.0
        },
        "status": {
          "$ref": "#/definitions/NodeStatus",
          "description": "Current node status"
        },
        "pool_id": {
          "type": ["string", "null"],
          "description": "Pool ID the node belongs to",
          "example": "pool_xyz789"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Node creation timestamp (ISO 8601)",
          "example": "2025-01-27T12:00:00Z"
        },
        "last_seen": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Last seen timestamp (ISO 8601)",
          "example": "2025-01-27T12:00:00Z"
        },
        "updated_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Last update timestamp (ISO 8601)",
          "example": "2025-01-27T12:00:00Z"
        },
        "performance_metrics": {
          "type": ["object", "null"],
          "description": "Performance metrics dictionary",
          "additionalProperties": true,
          "properties": {
            "uptime_hours": {
              "type": "number",
              "format": "float",
              "minimum": 0
            },
            "sessions_processed": {
              "type": "integer",
              "minimum": 0
            },
            "bytes_relayed": {
              "type": "integer",
              "minimum": 0
            },
            "work_credits": {
              "type": "number",
              "format": "float",
              "minimum": 0
            },
            "performance_score": {
              "type": "number",
              "format": "float",
              "minimum": 0,
              "maximum": 1.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    "NodeMetrics": {
      "type": "object",
      "required": [
        "node_id",
        "uptime_hours",
        "sessions_processed",
        "bytes_relayed",
        "storage_challenges_passed",
        "validation_signatures",
        "work_credits",
        "performance_score",
        "last_updated"
      ],
      "properties": {
        "node_id": {
          "type": "string",
          "description": "Node identifier",
          "example": "node_abc123"
        },
        "uptime_hours": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Total uptime in hours",
          "example": 720.5
        },
        "sessions_processed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of sessions processed",
          "example": 1500
        },
        "bytes_relayed": {
          "type": "integer",
          "minimum": 0,
          "description": "Total bytes relayed",
          "example": 1073741824
        },
        "storage_challenges_passed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of storage challenges passed",
          "example": 100
        },
        "validation_signatures": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of validation signatures",
          "example": 500
        },
        "work_credits": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "description": "Work credits earned",
          "example": 5000.0
        },
        "performance_score": {
          "type": "number",
          "format": "float",
          "minimum": 0,
          "maximum": 1.0,
          "description": "Performance score (0.0-1.0)",
          "example": 0.85
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last metrics update timestamp (ISO 8601)",
          "example": "2025-01-27T12:00:00Z"
        }
      },
      "additionalProperties": false
    }
  }
}

