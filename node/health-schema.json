{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node Management Health Check Response Schema",
  "description": "JSON schema for the health check endpoint response",
  "type": "object",
  "required": [
    "status",
    "service",
    "version",
    "timestamp"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy"],
      "description": "Health status of the service. Always 'healthy' for 200 response",
      "example": "healthy"
    },
    "service": {
      "type": "string",
      "description": "Service identifier",
      "example": "node-management",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Service version",
      "example": "1.0.0",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the health check",
      "example": "2025-01-27T12:00:00Z"
    },
    "active_nodes": {
      "type": "integer",
      "description": "Number of currently active nodes",
      "minimum": 0,
      "example": 5
    },
    "max_nodes_per_pool": {
      "type": "integer",
      "description": "Maximum nodes allowed per pool",
      "minimum": 1,
      "example": 100
    },
    "payout_threshold_usdt": {
      "type": "number",
      "format": "float",
      "description": "Payout threshold in USDT",
      "minimum": 0,
      "example": 10.0
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "healthy",
      "service": "node-management",
      "version": "1.0.0",
      "timestamp": "2025-01-27T12:00:00Z",
      "active_nodes": 5,
      "max_nodes_per_pool": 100,
      "payout_threshold_usdt": 10.0
    },
    {
      "status": "healthy",
      "service": "node-management",
      "version": "1.0.0",
      "timestamp": "2025-01-27T12:00:00Z",
      "active_nodes": 0,
      "max_nodes_per_pool": 100,
      "payout_threshold_usdt": 10.0
    }
  ]
}

