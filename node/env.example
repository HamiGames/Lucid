# Lucid Node Management Service - Environment Configuration
# Port: 8095
# Features: Node pool management, PoOT calculation, payout threshold (10 USDT), max 100 nodes

# Service Configuration
NODE_MANAGEMENT_PORT=8095
MAX_NODES_PER_POOL=100
PAYOUT_THRESHOLD_USDT=10.0
POOT_CALCULATION_INTERVAL=300
PAYOUT_PROCESSING_INTERVAL=3600

# Database Configuration
MONGODB_URI=mongodb://lucid-mongodb:27017/lucid_node_management
MONGODB_DATABASE=lucid_node_management
MONGODB_PASSWORD=lucid-password

REDIS_URI=redis://lucid-redis:6379
REDIS_PASSWORD=lucid-redis-password

# Security Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
API_KEY=your-api-key-here-change-in-production

# PoOT Configuration
POOT_CHALLENGE_VALIDITY_MINUTES=15
POOT_PROOF_CACHE_MINUTES=60
MIN_TOKEN_STAKE_AMOUNT=100.0
MAX_VALIDATION_ATTEMPTS=3
CHALLENGE_COMPLEXITY_BYTES=32

# Payout Configuration
PAYOUT_PROCESSING_FEE_PERCENT=1.0
PAYOUT_MIN_AMOUNT_USDT=1.0
PAYOUT_MAX_AMOUNT_USDT=10000.0

# Pool Configuration
MIN_NODES_PER_POOL=3
POOL_HEALTH_CHECK_INTERVAL=300
POOL_SYNC_INTERVAL=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/node-management.log

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# TRON Integration (Optional)
TRON_NETWORK=mainnet
TRON_API_URL=https://api.trongrid.io
TRON_API_KEY=your-tron-api-key-here
USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# Development Configuration
DEBUG=false
RELOAD=false
WORKERS=1

# Production Configuration
PRODUCTION=false
SECURE_COOKIES=true
CORS_ORIGINS=*
TRUSTED_HOSTS=*

# Build Configuration
BUILD_DATE=2025-01-14T00:00:00Z
VCS_REF=main
VERSION=1.0.0
PLATFORM=linux/arm64
