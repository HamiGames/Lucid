# Lucid Admin Interface - Environment Variables Template
# Step 24: Admin Container & Integration
#
# Copy this file to .env and configure the values for your environment.
# Never commit the actual .env file to version control.

# =============================================================================
# ADMIN INTERFACE CONFIGURATION
# =============================================================================

# Service Configuration
LUCID_ADMIN_HOST=0.0.0.0
LUCID_ADMIN_PORT=8096
LUCID_ADMIN_DEBUG=false
LUCID_ADMIN_LOG_LEVEL=INFO
LUCID_ADMIN_SERVICE_NAME=lucid-admin-interface

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
LUCID_ADMIN_MONGODB_URL=mongodb://lucid:lucid@localhost:27017/lucid?authSource=admin
LUCID_ADMIN_MONGODB_DATABASE=lucid
LUCID_ADMIN_MONGODB_USERNAME=lucid
LUCID_ADMIN_MONGODB_PASSWORD=lucid
LUCID_ADMIN_MONGODB_AUTH_SOURCE=admin

# Redis Configuration
LUCID_ADMIN_REDIS_URL=redis://localhost:6379/0
LUCID_ADMIN_REDIS_HOST=localhost
LUCID_ADMIN_REDIS_PORT=6379
LUCID_ADMIN_REDIS_DB=0
LUCID_ADMIN_REDIS_PASSWORD=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
LUCID_ADMIN_JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
LUCID_ADMIN_JWT_ALGORITHM=HS256
LUCID_ADMIN_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
LUCID_ADMIN_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Configuration
LUCID_ADMIN_ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production
LUCID_ADMIN_ENCRYPTION_ALGORITHM=AES-256-GCM

# TOTP Configuration
LUCID_ADMIN_TOTP_ISSUER=Lucid Admin
LUCID_ADMIN_TOTP_ALGORITHM=SHA1
LUCID_ADMIN_TOTP_DIGITS=6
LUCID_ADMIN_TOTP_PERIOD=30

# =============================================================================
# SERVICE INTEGRATION
# =============================================================================

# Blockchain Core Service
LUCID_ADMIN_BLOCKCHAIN_URL=http://localhost:8084
LUCID_ADMIN_BLOCKCHAIN_API_KEY=your-blockchain-api-key

# Session Management Service
LUCID_ADMIN_SESSION_URL=http://localhost:8082
LUCID_ADMIN_SESSION_API_KEY=your-session-api-key

# Node Management Service
LUCID_ADMIN_NODE_URL=http://localhost:8095
LUCID_ADMIN_NODE_API_KEY=your-node-api-key

# Authentication Service
LUCID_ADMIN_AUTH_URL=http://localhost:8089
LUCID_ADMIN_AUTH_API_KEY=your-auth-api-key

# Tor Proxy Configuration
LUCID_ADMIN_TOR_URL=http://localhost:9050
LUCID_ADMIN_TOR_SOCKS_PORT=9050
LUCID_ADMIN_TOR_HTTP_PORT=8118

# =============================================================================
# RBAC CONFIGURATION
# =============================================================================

# Role-Based Access Control
LUCID_ADMIN_DEFAULT_ROLE=operator
LUCID_ADMIN_SUPER_ADMIN_ROLE=super-admin
LUCID_ADMIN_ADMIN_ROLE=admin
LUCID_ADMIN_OPERATOR_ROLE=operator

# Permission Configuration
LUCID_ADMIN_REQUIRE_MFA=true
LUCID_ADMIN_SESSION_TIMEOUT=3600
LUCID_ADMIN_MAX_LOGIN_ATTEMPTS=5
LUCID_ADMIN_LOCKOUT_DURATION=900

# =============================================================================
# AUDIT LOGGING CONFIGURATION
# =============================================================================

# Audit Log Settings
LUCID_ADMIN_AUDIT_ENABLED=true
LUCID_ADMIN_AUDIT_LOG_LEVEL=INFO
LUCID_ADMIN_AUDIT_RETENTION_DAYS=90
LUCID_ADMIN_AUDIT_BATCH_SIZE=100
LUCID_ADMIN_AUDIT_FLUSH_INTERVAL=30

# Audit Log Storage
LUCID_ADMIN_AUDIT_STORAGE_TYPE=mongodb
LUCID_ADMIN_AUDIT_STORAGE_URL=mongodb://lucid:lucid@localhost:27017/lucid_audit?authSource=admin
LUCID_ADMIN_AUDIT_BACKUP_ENABLED=true
LUCID_ADMIN_AUDIT_BACKUP_RETENTION_DAYS=365

# =============================================================================
# EMERGENCY CONTROLS CONFIGURATION
# =============================================================================

# Emergency Settings
LUCID_ADMIN_EMERGENCY_ENABLED=true
LUCID_ADMIN_EMERGENCY_LOCKDOWN_ENABLED=true
LUCID_ADMIN_EMERGENCY_SHUTDOWN_ENABLED=true
LUCID_ADMIN_EMERGENCY_NOTIFICATION_ENABLED=true

# Emergency Contacts
LUCID_ADMIN_EMERGENCY_EMAIL=admin@lucid.local
LUCID_ADMIN_EMERGENCY_PHONE=+1-555-0123
LUCID_ADMIN_EMERGENCY_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health Check Configuration
LUCID_ADMIN_HEALTH_CHECK_INTERVAL=30
LUCID_ADMIN_HEALTH_CHECK_TIMEOUT=10
LUCID_ADMIN_HEALTH_CHECK_RETRIES=3

# Metrics Configuration
LUCID_ADMIN_METRICS_ENABLED=true
LUCID_ADMIN_METRICS_PORT=9090
LUCID_ADMIN_METRICS_PATH=/metrics

# =============================================================================
# RATE LIMITING AND THROTTLING
# =============================================================================

# Rate Limiting
LUCID_ADMIN_RATE_LIMIT=1000
LUCID_ADMIN_RATE_LIMIT_WINDOW=60
LUCID_ADMIN_RATE_LIMIT_BURST=100

# Throttling
LUCID_ADMIN_THROTTLE_ENABLED=true
LUCID_ADMIN_THROTTLE_REQUESTS_PER_MINUTE=100
LUCID_ADMIN_THROTTLE_BURST_SIZE=20

# =============================================================================
# CORS AND SECURITY HEADERS
# =============================================================================

# CORS Configuration
LUCID_ADMIN_CORS_ORIGINS=https://admin.lucid.local,http://localhost:3000
LUCID_ADMIN_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
LUCID_ADMIN_CORS_HEADERS=*
LUCID_ADMIN_CORS_CREDENTIALS=true

# Security Headers
LUCID_ADMIN_SECURITY_HEADERS=true
LUCID_ADMIN_HSTS_ENABLED=true
LUCID_ADMIN_HSTS_MAX_AGE=31536000
LUCID_ADMIN_CSP_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications
LUCID_ADMIN_EMAIL_ENABLED=true
LUCID_ADMIN_EMAIL_SMTP_HOST=smtp.gmail.com
LUCID_ADMIN_EMAIL_SMTP_PORT=587
LUCID_ADMIN_EMAIL_SMTP_USER=admin@lucid.local
LUCID_ADMIN_EMAIL_SMTP_PASSWORD=your-email-password
LUCID_ADMIN_EMAIL_FROM=admin@lucid.local

# Slack Notifications
LUCID_ADMIN_SLACK_ENABLED=false
LUCID_ADMIN_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
LUCID_ADMIN_SLACK_CHANNEL=#lucid-admin

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development Settings
LUCID_ADMIN_DEV_MODE=false
LUCID_ADMIN_DEBUG_SQL=false
LUCID_ADMIN_RELOAD=false
LUCID_ADMIN_WORKERS=1

# Testing Settings
LUCID_ADMIN_TEST_MODE=false
LUCID_ADMIN_TEST_DATABASE=lucid_test
LUCID_ADMIN_TEST_REDIS_DB=1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LUCID_ADMIN_LOG_FORMAT=json
LUCID_ADMIN_LOG_FILE=/app/logs/admin.log
LUCID_ADMIN_LOG_ROTATION=true
LUCID_ADMIN_LOG_MAX_SIZE=100MB
LUCID_ADMIN_LOG_BACKUP_COUNT=5

# Structured Logging
LUCID_ADMIN_STRUCTURED_LOGGING=true
LUCID_ADMIN_LOG_CORRELATION_ID=true
LUCID_ADMIN_LOG_USER_ID=true
LUCID_ADMIN_LOG_REQUEST_ID=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
LUCID_ADMIN_BACKUP_ENABLED=true
LUCID_ADMIN_BACKUP_SCHEDULE=0 2 * * *
LUCID_ADMIN_BACKUP_RETENTION_DAYS=30
LUCID_ADMIN_BACKUP_STORAGE_PATH=/app/backups

# Recovery Configuration
LUCID_ADMIN_RECOVERY_ENABLED=true
LUCID_ADMIN_RECOVERY_MODE=false
LUCID_ADMIN_RECOVERY_CHECKPOINT_INTERVAL=300

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# External API Keys (if needed)
LUCID_ADMIN_EXTERNAL_API_KEY=
LUCID_ADMIN_EXTERNAL_WEBHOOK_URL=
LUCID_ADMIN_EXTERNAL_SERVICE_URL=

# Third-party Service Integration
LUCID_ADMIN_SENTRY_DSN=
LUCID_ADMIN_DATADOG_API_KEY=
LUCID_ADMIN_NEW_RELIC_LICENSE_KEY=
