# Lucid Session Images Configuration
# Environment variables for session Docker images

# Build Configuration
BUILD_PLATFORM=linux/arm64
PYTHON_VERSION=3.11
DISTROLESS_BASE=gcr.io/distroless/python3-debian12

# Image Configuration
SESSION_PIPELINE_IMAGE=pickme/lucid-session-pipeline
SESSION_RECORDER_IMAGE=pickme/lucid-session-recorder
CHUNK_PROCESSOR_IMAGE=pickme/lucid-chunk-processor
SESSION_STORAGE_IMAGE=pickme/lucid-session-storage
SESSION_API_IMAGE=pickme/lucid-session-api

# Image Tags
IMAGE_TAG=latest-arm64

# Port Configuration
SESSION_PIPELINE_PORT=8083
SESSION_RECORDER_PORT=8084
CHUNK_PROCESSOR_PORT=8085
SESSION_STORAGE_PORT=8086
SESSION_API_PORT=8087

# Service Configuration
SERVICE_NAME_PIPELINE=lucid-session-pipeline
SERVICE_NAME_RECORDER=lucid-session-recorder
SERVICE_NAME_PROCESSOR=lucid-session-processor
SERVICE_NAME_STORAGE=lucid-session-storage
SERVICE_NAME_API=lucid-session-api

# Environment Variables
LOG_LEVEL=INFO
DEBUG=false
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Recording Configuration (for Session Recorder)
LUCID_RECORDING_PATH=/data/recordings
LUCID_CHUNK_OUTPUT_PATH=/data/chunks
LUCID_HARDWARE_ACCELERATION=true
LUCID_VIDEO_CODEC=h264_v4l2m2m
LUCID_AUDIO_CODEC=opus
LUCID_BITRATE=2000k
LUCID_FPS=30
LUCID_CHUNK_SIZE_MB=10
LUCID_COMPRESSION_LEVEL=6

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=5s

# Volume Configuration
VOLUME_SESSION_DATA=/data/sessions
VOLUME_RECORDING_DATA=/data/recordings
VOLUME_CHUNK_DATA=/data/chunks
VOLUME_PROCESSED_DATA=/data/processed
VOLUME_STORAGE_DATA=/data/storage
VOLUME_LOGS=/app/logs

# Network Configuration
NETWORK_NAME=lucid-session-network
NETWORK_DRIVER=bridge
