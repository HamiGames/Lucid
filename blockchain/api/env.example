# Blockchain API Environment Configuration
# Copy this file to .env and update the values

# API Settings
API_TITLE="Lucid Blockchain API"
API_VERSION="1.0.0"
API_DESCRIPTION="API for the lucid_blocks blockchain system with PoOT consensus"

# Server Settings
HOST="0.0.0.0"
PORT=8084
DEBUG=false

# Database Settings
DATABASE_URL="mongodb://localhost:27017/lucid_blockchain"
DATABASE_NAME="lucid_blockchain"

# Redis Settings
REDIS_URL="redis://localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# Security Settings
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE="redis"

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Blockchain Settings
BLOCKCHAIN_NETWORK="lucid_blocks_mainnet"
CONSENSUS_ALGORITHM="PoOT"
BLOCK_TIME=10
MAX_TRANSACTIONS_PER_BLOCK=1000

# CORS Settings
CORS_ORIGINS="*"
CORS_CREDENTIALS=true
CORS_METHODS="*"
CORS_HEADERS="*"
