# blockchain/Dockerfile.data
# LUCID DATA CHAIN - SPEC-1B Implementation
# Distroless FastAPI service for Lucid data-chain management
# Build context: repository root

# syntax=docker/dockerfile:1.5

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0
ARG TARGETPLATFORM=linux/arm64
ARG BUILDPLATFORM=linux/amd64
ARG PYTHON_VERSION=3.11

############################
# Stage 1 – Builder
############################
FROM --platform=$BUILDPLATFORM python:3.11-slim AS builder

ARG BUILDPLATFORM
ARG TARGETPLATFORM
ARG PYTHON_VERSION

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_PREFER_BINARY=1 \
    DEBIAN_FRONTEND=noninteractive

RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    apt-get update --allow-releaseinfo-change 2>&1 || \
    (echo "Warning: apt-get update had GPG issues, continuing..." && \
     apt-get update --allow-releaseinfo-change --allow-insecure-repositories --allow-unauthenticated 2>&1 || true) && \
    apt-get install -y --no-install-recommends --allow-unauthenticated \
        build-essential \
        gcc \
        g++ \
        libffi-dev \
        libssl-dev \
        pkg-config \
        curl \
        ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

WORKDIR /build

# Create placeholder files in system directories with actual content (ensures they're baked into image)
RUN echo "LUCID_DATA_CHAIN_RUNTIME_DIRECTORY" > /var/run/.keep && \
    echo "LUCID_DATA_CHAIN_LIB_DIRECTORY" > /var/lib/.keep && \
    chown -R 65532:65532 /var/run /var/lib

RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --upgrade pip setuptools wheel

COPY blockchain/data/requirements.txt ./requirements.txt

# Ensure directory structure exists before pip install
RUN mkdir -p /root/.local/lib/python3.11/site-packages && \
    mkdir -p /root/.local/bin

RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --user --no-cache-dir --prefer-binary -r requirements.txt

# Create marker files with actual content (ensures directory structure is locked in)
# CRITICAL: Must be AFTER pip install, with actual content (not empty)
RUN echo "LUCID_DATA_CHAIN_PACKAGES_INSTALLED_$(date +%s)" > /root/.local/lib/python3.11/site-packages/.lucid-marker && \
    echo "LUCID_DATA_CHAIN_BINARIES_INSTALLED_$(date +%s)" > /root/.local/bin/.lucid-marker && \
    chown -R 65532:65532 /root/.local

# Verify packages are installed and verify directory structure
# Only verify packages actually used by data-chain service (from requirements.txt)
RUN python3 -c "import fastapi, uvicorn, pydantic, motor, pymongo, blake3, yaml, lz4, zstandard, httpx, aiohttp; print('✅ critical data-chain packages installed')" && \
    python3 -c "import uvicorn; print('uvicorn location:', uvicorn.__file__)" && \
    test -d /root/.local/lib/python3.11/site-packages && \
    echo "Directory exists: /root/.local/lib/python3.11/site-packages" && \
    ls -la /root/.local/lib/python3.11/site-packages/ | head -20 && \
    echo "Package count: $(ls -1 /root/.local/lib/python3.11/site-packages/ | wc -l)"

# Copy blockchain source to staging area first
COPY blockchain/ ./blockchain-src/

# Copy required directories for data-chain service only
# Data-chain needs: data (service), core (merkle_tree_builder, models), config (config, yaml_loader)
# Note: api, utils, contracts, deployment, chain-client, evm, on_system_chain are NOT needed for data-chain
RUN cp -r ./blockchain-src/data ./data && \
    cp -r ./blockchain-src/core ./core && \
    cp -r ./blockchain-src/config ./config && \
    cp ./blockchain-src/__init__.py ./__init__.py && \
    rm -rf ./blockchain-src

# Verify __init__.py exists in builder before copying to runtime (fail build if missing)
# CRITICAL: __init__.py is required for package structure
RUN test -f ./__init__.py && echo "✅ __init__.py verified in builder stage" || (echo "CRITICAL: __init__.py not found in builder stage" && exit 1)

############################
# Stage 2 – Runtime
############################
FROM --platform=$TARGETPLATFORM gcr.io/distroless/python3-debian12:latest

ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=1.0.0

LABEL maintainer="Lucid Development Team" \
      org.opencontainers.image.title="Lucid Data Chain" \
      org.opencontainers.image.description="Distroless data-chain service for Lucid project" \
      org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      com.lucid.service="data-chain" \
      com.lucid.platform="arm64" \
      com.lucid.cluster="core" \
      com.lucid.security="distroless"

# Environment Variables Configuration
# Required:
#   - MONGO_URL, MONGODB_URL, or MONGODB_URI: MongoDB connection string (required)
# Optional:
#   - BLOCKCHAIN_ENGINE_URL: Blockchain engine URL (optional - data-chain operates standalone)
#   - DATA_CHAIN_PORT: Service port (default: 8087)
#   - DATA_CHAIN_HOST: Service host (default: 0.0.0.0)
#   - DATA_CHAIN_URL: Full service URL (auto-generated if not set)
#   - LOG_LEVEL: Logging level (default: INFO)
#   - DATA_CHAIN_API_TITLE: API title (default: "Lucid Data Chain API")
#   - DATA_CHAIN_API_VERSION: API version (default: "1.0.0")
#   - DATA_CHAIN_CORS_ORIGINS: CORS allowed origins (default: "*")
#   - DATA_CHAIN_CHUNK_SIZE_BYTES: Default chunk size (default: 1048576 = 1MB)
#   - DATA_CHAIN_COMPRESSION_ALGORITHM: Compression algorithm (default: "zstd")
#   - DATA_CHAIN_DEDUPLICATION_ENABLED: Enable deduplication (default: "true")
#   - DATA_CHAIN_VERIFICATION_ON_STORAGE: Verify on storage (default: "true")
#   - DATA_CHAIN_VERIFICATION_ON_RETRIEVAL: Verify on retrieval (default: "true")
ENV PATH=/usr/local/bin:/usr/bin:/bin \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app:/usr/local/lib/python3.11/site-packages \
    PYTHONIOENCODING=utf-8 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    DATA_CHAIN_PORT=8087 \
    DATA_CHAIN_HOST=0.0.0.0

WORKDIR /app

# Copy runtime directories from builder (directory already populated with .keep files)
COPY --from=builder --chown=65532:65532 /var/run /var/run
COPY --from=builder --chown=65532:65532 /var/lib /var/lib

# Verify runtime directories were copied (fail build if missing)
RUN ["/usr/bin/python3", "-c", "import os; assert os.path.exists('/var/run'), 'CRITICAL: /var/run not copied'; assert os.path.exists('/var/run/.keep'), 'CRITICAL: /var/run/.keep marker missing'; assert os.path.exists('/var/lib'), 'CRITICAL: /var/lib not copied'; assert os.path.exists('/var/lib/.keep'), 'CRITICAL: /var/lib/.keep marker missing'; print('✅ Runtime directories verified (/var/run, /var/lib)')"]

# Copy CA certificates (required for SSL/TLS operations)
# Certificate file - world-readable, ownership doesn't affect functionality
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/ca-certificates.crt

# Verify Python interpreter is from base image (not copied from builder)
# CRITICAL: Ensure we're using distroless base Python, not a local copy
RUN ["/usr/bin/python3", "-c", "import sys; import os; py_exe = sys.executable; assert py_exe == '/usr/bin/python3' or py_exe.startswith('/usr/bin/python3'), f'CRITICAL: Python interpreter is not from base image: {py_exe}'; assert os.path.exists('/usr/bin/python3'), 'CRITICAL: /usr/bin/python3 does not exist in base image'; print(f'✅ Python interpreter verified: {py_exe} (from distroless base image)')"]

# Copy Python packages (directory already populated with packages + marker files from builder stage)
# Following Dockerfile-copy-pattern.md: copy to /usr/local for better distroless compatibility
COPY --from=builder --chown=65532:65532 /root/.local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder --chown=65532:65532 /root/.local/bin /usr/local/bin

# Verify packages were copied (this will fail the build if packages are missing)
# Following Dockerfile-copy-pattern.md: verify in runtime stage with correct path
# Verify all packages from requirements.txt: fastapi, uvicorn, pydantic, motor, pymongo, blake3, yaml, lz4, zstandard, httpx, aiohttp
RUN ["/usr/bin/python3", "-c", "import sys; import os; site_packages = '/usr/local/lib/python3.11/site-packages'; assert os.path.exists(site_packages), f'{site_packages} does not exist'; assert os.path.exists(os.path.join(site_packages, 'uvicorn')), 'uvicorn not found'; assert os.path.exists(os.path.join(site_packages, 'fastapi')), 'fastapi not found'; assert os.path.exists(os.path.join(site_packages, 'pydantic')), 'pydantic not found'; assert os.path.exists(os.path.join(site_packages, 'motor')), 'motor not found'; assert os.path.exists(os.path.join(site_packages, 'pymongo')), 'pymongo not found'; assert os.path.exists(os.path.join(site_packages, 'blake3')), 'blake3 not found'; assert os.path.exists(os.path.join(site_packages, 'yaml')) or os.path.exists(os.path.join(site_packages, 'yaml.py')), 'yaml not found'; assert os.path.exists(os.path.join(site_packages, 'lz4')), 'lz4 not found'; assert os.path.exists(os.path.join(site_packages, 'zstandard')), 'zstandard not found'; assert os.path.exists(os.path.join(site_packages, 'httpx')), 'httpx not found'; assert os.path.exists(os.path.join(site_packages, 'aiohttp')), 'aiohttp not found'; assert os.path.exists(os.path.join(site_packages, '.lucid-marker')), 'marker file not found'; marker_path = os.path.join(site_packages, '.lucid-marker'); assert os.path.getsize(marker_path) > 0, f'marker file is empty: {marker_path}'; print('✅ Data-chain packages verified in runtime stage (all from requirements.txt)')"]
# Copy only required directories for data-chain service
# Data-chain service dependencies: data (service), core (merkle_tree_builder, models), config (config, yaml_loader)
COPY --chown=65532:65532 --from=builder /build/data            /app/blockchain/data
COPY --chown=65532:65532 --from=builder /build/core            /app/blockchain/core
COPY --chown=65532:65532 --from=builder /build/config          /app/blockchain/config

# Copy root-level __init__.py for package structure (pattern guide allows this exception for package init files)
# CRITICAL: __init__.py was verified in builder stage, COPY will fail if missing
COPY --chown=65532:65532 --from=builder /build/__init__.py /app/blockchain/__init__.py

# Verify all directories and __init__.py were copied (fail build if any are missing)
RUN /usr/bin/python3 - <<'PY'
import os

required = {
    '/app/blockchain/data': 'directory',
    '/app/blockchain/core': 'directory',
    '/app/blockchain/config': 'directory',
    '/app/blockchain/__init__.py': 'file',
}

missing = []
for path, path_type in required.items():
    exists = os.path.exists(path)
    is_correct = os.path.isdir(path) if path_type == 'directory' else os.path.isfile(path)
    if not (exists and is_correct):
        missing.append(f'{path} ({path_type})')

assert not missing, f'CRITICAL: Missing or incorrect type: {missing}'
print('✅ All data-chain directories and __init__.py verified after COPY')
PY

# Verify data-chain entrypoint exists and is correct (CRITICAL: fail build if wrong)
RUN ["/usr/bin/python3", "-c", "import os; entrypoint_path = '/app/blockchain/data/api/entrypoint.py'; assert os.path.exists(entrypoint_path), f'CRITICAL: Data-chain entrypoint not found at {entrypoint_path}'; assert os.path.isfile(entrypoint_path), f'CRITICAL: {entrypoint_path} is not a file'; print(f'✅ Data-chain entrypoint verified: {entrypoint_path}')"]

# Verify data-chain main module exists
RUN ["/usr/bin/python3", "-c", "import os; main_path = '/app/blockchain/data/api/main.py'; assert os.path.exists(main_path), f'CRITICAL: Data-chain main module not found at {main_path}'; print(f'✅ Data-chain main module verified: {main_path}')"]

# Verify that only data-chain directories are present (data, core, config)
RUN ["/usr/bin/python3", "-c", "import os; required_dirs = ['/app/blockchain/data', '/app/blockchain/core', '/app/blockchain/config']; missing = [d for d in required_dirs if not os.path.exists(d)]; assert not missing, f'Missing required directories: {missing}'; print('✅ All required data-chain directories present (data, core, config)')"]

# Final verification: Ensure we can import all critical data-chain modules (catches import errors early)
# Verifies: API, Merkle tree builder, models, chunk manager, storage, integrity, deduplication, service, config
RUN ["/usr/bin/python3", "-c", "import sys; sys.path.insert(0, '/app'); import blockchain.data.api.main; import blockchain.core.merkle_tree_builder; import blockchain.core.models; import blockchain.data.chunk_manager; import blockchain.data.storage; import blockchain.data.integrity; import blockchain.data.deduplication; import blockchain.data.service; import blockchain.config.config; print('✅ All data-chain modules (merkle, chunks, storage, integrity) import successful')"]

EXPOSE 8087

HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD ["/usr/bin/python3", "-c", "import os, urllib.request; port = os.getenv('DATA_CHAIN_PORT', '8087'); urllib.request.urlopen(f'http://localhost:{port}/health', timeout=5).read(); exit(0)"]

USER 65532:65532

# Clear ENTRYPOINT from distroless base image to allow CMD to work correctly
ENTRYPOINT []

# CRITICAL: Data-chain entrypoint - DO NOT use /app/api/app/entrypoint.py (that's blockchain-api)
# This CMD must point to the data-chain entrypoint, not blockchain-api entrypoint
CMD ["/usr/bin/python3", "/app/blockchain/data/api/entrypoint.py"]