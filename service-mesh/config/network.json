{
  "network": {
    "name": "${LUCID_PI_NETWORK:-lucid-pi-network}",
    "subnet": "${LUCID_PI_SUBNET:-172.20.0.0/16}",
    "gateway": "${LUCID_PI_GATEWAY:-172.20.0.1}",
    "driver": "${NETWORK_DRIVER:-bridge}",
    "ipam": {
      "driver": "${IPAM_DRIVER:-default}",
      "config": [
        {
          "subnet": "${LUCID_PI_SUBNET:-172.20.0.0/16}",
          "gateway": "${LUCID_PI_GATEWAY:-172.20.0.1}"
        }
      ]
    }
  },
  "service_ips": {
    "tor-proxy": "${TOR_IP:-172.20.0.10}",
    "lucid-mongodb": "${MONGODB_IP:-172.20.0.11}",
    "lucid-redis": "${REDIS_IP:-172.20.0.12}",
    "lucid-elasticsearch": "${ELASTICSEARCH_IP:-172.20.0.13}",
    "api-gateway": "${API_GATEWAY_IP:-172.20.0.14}",
    "auth-service": "${AUTH_IP:-172.20.0.15}",
    "blockchain-engine": "${BLOCKCHAIN_ENGINE_IP:-172.20.0.16}",
    "session-anchoring": "${SESSION_ANCHORING_IP:-172.20.0.17}",
    "block-manager": "${BLOCK_MANAGER_IP:-172.20.0.18}",
    "service-mesh-controller": "${SERVICE_MESH_CONTROLLER_IP:-172.20.0.19}",
    "data-chain": "${DATA_CHAIN_IP:-172.20.0.20}"
  },
  "port_mappings": {
    "tor-proxy": {
      "socks": "${TOR_SOCKS_PORT:-9050}",
      "control": "${TOR_CONTROL_PORT:-9051}",
      "dns": "${TOR_DNS_PORT:-9053}"
    },
    "lucid-mongodb": {
      "mongodb": "${MONGODB_PORT:-27017}"
    },
    "lucid-redis": {
      "redis": "${REDIS_PORT:-6379}"
    },
    "lucid-elasticsearch": {
      "http": "${ELASTICSEARCH_HTTP_PORT:-9200}",
      "transport": "${ELASTICSEARCH_TRANSPORT_PORT:-9300}"
    },
    "api-gateway": {
      "http": "${API_GATEWAY_PORT:-8080}",
      "https": "${API_GATEWAY_HTTPS_PORT:-8443}"
    },
    "auth-service": {
      "http": "${AUTH_PORT:-8084}"
    },
    "blockchain-engine": {
      "http": "${BLOCKCHAIN_ENGINE_PORT:-8082}"
    },
    "session-anchoring": {
      "http": "${SESSION_ANCHORING_PORT:-8085}"
    },
    "block-manager": {
      "http": "${BLOCK_MANAGER_PORT:-8086}"
    },
    "data-chain": {
      "http": "${DATA_CHAIN_PORT:-8087}"
    },
    "service-mesh": {
      "consul_http": "${SERVICE_MESH_PORT:-8500}",
      "consul_https": "${CONSUL_HTTPS_PORT:-8501}",
      "consul_grpc": "${CONSUL_GRPC_PORT:-8502}",
      "consul_dns": "${CONSUL_DNS_PORT:-8600}",
      "http_api": "${HTTP_PORT:-8088}"
    }
  },
  "dns": {
    "enabled": "${DNS_ENABLED:-true}",
    "port": "${CONSUL_DNS_PORT:-8600}",
    "domain": "${DNS_DOMAIN:-lucid.local}",
    "upstream_servers": [
      "${DNS_UPSTREAM_1:-8.8.8.8}",
      "${DNS_UPSTREAM_2:-8.8.4.4}"
    ]
  }
}
