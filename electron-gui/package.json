{
  "name": "lucid-electron-gui",
  "version": "1.0.0",
  "description": "Lucid Desktop Application - Multi-Window Electron GUI with Tor Integration, Blockchain-based RDP Access, and TRON Payment Services",
  "main": "main/index.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/HamiGames/Lucid.git",
    "directory": "electron-gui"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "package:mac": "electron-builder --mac",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "lucid",
    "blockchain",
    "tor",
    "desktop",
    "rdp",
    "remote-desktop",
    "tron",
    "usdt",
    "payment",
    "distroless",
    "arm64",
    "raspberry-pi"
  ],
  "author": "Lucid Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dockerode": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socks-proxy-agent": "^8.0.2",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.lucid.electron-gui",
    "productName": "Lucid Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "shared/**/*",
      "assets/**/*",
      "configs/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/tor",
        "to": "tor",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "config": {
    "projectName": "Lucid",
    "projectVersion": "1.0.0",
    "projectRoot": "/mnt/myssd/Lucid/Lucid",
    "platform": "arm64",
    "port": 8000,
    "apiGateway": {
      "host": "172.20.0.10",
      "port": 8080,
      "url": "http://lucid-api-gateway:8080/api/v1"
    },
    "networks": {
      "lucidPiNetwork": "lucid-pi-network",
      "lucidPiSubnet": "172.20.0.0/16",
      "lucidPiGateway": "172.20.0.1",
      "lucidGuiNetwork": "lucid-gui-network",
      "lucidGuiSubnet": "172.22.0.0/16",
      "lucidGuiGateway": "172.22.0.1"
    },
    "services": {
      "apiGateway": "http://lucid-api-gateway:8080",
      "authService": "http://lucid-auth-service:8089",
      "blockchain": "http://lucid-blockchain-engine:8084",
      "sessions": "http://lucid-session-api:8087",
      "nodes": "http://lucid-node-management:8095",
      "admin": "http://lucid-admin-interface:8083",
      "tron": "http://lucid-tron-client:8091",
      "wallet": "http://lucid-wallet-manager:8093",
      "payment": "http://lucid-payment-gateway:8097"
    }
  }
}