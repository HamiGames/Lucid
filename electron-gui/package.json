{
  "name": "lucid-electron-gui",
  "version": "1.0.0",
  "description": "Lucid Platform - Electron GUI for Admin, User, Node, and Developer interfaces",
  "main": "dist/main/index.js",
  "author": "Lucid Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "dev:full": "node scripts/dev.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:full": "node scripts/build.js",
    "build:admin": "webpack --config webpack.renderer.config.js --env gui=admin",
    "build:user": "webpack --config webpack.renderer.config.js --env gui=user",
    "build:node": "webpack --config webpack.renderer.config.js --env gui=node",
    "build:developer": "webpack --config webpack.renderer.config.js --env gui=developer",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "package:mac": "electron-builder --mac",
    "package:all": "electron-builder --win --linux --mac",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "deploy:pi": "node scripts/deploy-pi.js",
    "deploy:docker": "docker build -t lucid-electron-gui .",
    "deploy:all": "npm run build && npm run package && npm run deploy:pi",
    "status:tor": "node scripts/tor-status.js",
    "status:docker": "node scripts/docker-status.js",
    "status:api": "node scripts/api-test.js",
    "status:all": "npm run status:tor && npm run status:docker && npm run status:api"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dockerode": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socks-proxy-agent": "^8.0.2",
    "tor-ctrl": "^1.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "spectron": "^19.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "optionalDependencies": {
    "@ledgerhq/hw-app-tron": "^6.27.11",
    "@trezor/connect": "^9.2.16",
    "@keepkey/hdwallet": "^0.46.1"
  }
}
