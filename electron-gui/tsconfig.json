{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./shared/*"],
      "@renderer/*": ["./renderer/*"],
      "@main/*": ["./main/*"]
    }
  },
  "include": [
    "main/**/*",
    "renderer/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
