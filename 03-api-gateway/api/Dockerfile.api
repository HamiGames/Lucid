# LUCID API SERVER - SPEC-4 Stage 0 Core Support (Distroless)
# Professional FastAPI server for Pi deployment with distroless security
# Multi-platform build for ARM64 Pi and AMD64 development

# syntax=docker/dockerfile:1.7
FROM python:3.12-slim AS api-builder

# Metadata for professional container management
LABEL maintainer="Lucid Development Team" \
      version="1.0.0-distroless" \
      description="FastAPI server for Lucid sessions gateway (Distroless)" \
      com.lucid.plane="ops" \
      com.lucid.service="api-server" \
      com.lucid.expose="8081"

# Python environment optimizations
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Create non-root user for security
RUN groupadd --gid 1000 lucid \
    && useradd --uid 1000 --gid lucid --shell /bin/bash --create-home lucid

# Install system dependencies with security focus
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       curl \
       ca-certificates \
       netcat-traditional \
       jq \
       gosu \
       build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set up application directory
WORKDIR /app
RUN chown -R lucid:lucid /app

# Install FastAPI stack with specific versions for Pi compatibility
RUN pip install --no-cache-dir \
        "uvicorn[standard]>=0.24.0" \
        "fastapi>=0.104.0" \
        "pydantic>=2.0.0" \
        "motor>=3.3.0" \
        "pymongo>=4.5.0" \
        "python-multipart>=0.0.6" \
        "python-jose[cryptography]>=3.3.0" \
        "passlib[bcrypt]>=1.7.4" \
        "aiofiles>=23.0.0" \
        "httpx>=0.25.0"

# Copy requirements if it exists and install additional dependencies
COPY requirements.txt* /app/
RUN if [ -f requirements.txt ]; then pip install --no-cache-dir -r requirements.txt; fi

# Copy application code
COPY --chown=lucid:lucid app/ /app/app/

# Create directories for onion state and logs
RUN mkdir -p /run/lucid/onion /var/log/lucid \
    && chown -R lucid:lucid /run/lucid /var/log/lucid

# Stage 2: Distroless runtime with Python
FROM gcr.io/distroless/python3-debian12:latest

# Metadata for runtime container
LABEL maintainer="Lucid Development Team" \
      version="1.0.0-distroless" \
      description="FastAPI server for Lucid sessions gateway (Distroless Runtime)" \
      com.lucid.plane="ops" \
      com.lucid.service="api-server" \
      com.lucid.expose="8081"

# Copy Python installation and packages from builder
COPY --from=api-builder /usr/local/lib/python3.12 /usr/local/lib/python3.12
COPY --from=api-builder /usr/local/bin/python3.12 /usr/local/bin/python3.12
COPY --from=api-builder /usr/local/bin/uvicorn /usr/local/bin/uvicorn

# Copy system dependencies
COPY --from=api-builder /usr/bin/curl /usr/bin/curl
COPY --from=api-builder /bin/nc /bin/nc
COPY --from=api-builder /usr/bin/jq /usr/bin/jq
COPY --from=api-builder /usr/sbin/gosu /usr/sbin/gosu

# Copy required dynamic libraries (architecture-specific)
COPY --from=api-builder /lib/*-linux-*/libc.so.6 /lib/
COPY --from=api-builder /lib/*-linux-*/libssl.so.3 /lib/
COPY --from=api-builder /lib/*-linux-*/libcrypto.so.3 /lib/
COPY --from=api-builder /lib/*-linux-*/libz.so.1 /lib/
COPY --from=api-builder /lib/*-linux-*/liblzma.so.5 /lib/
COPY --from=api-builder /lib/*-linux-*/libzstd.so.1 /lib/
COPY --from=api-builder /lib*/ld-linux-*.so.2 /lib64/

# Copy user and group information
COPY --from=api-builder /etc/passwd /etc/passwd
COPY --from=api-builder /etc/group /etc/group

# Copy CA certificates
COPY --from=api-builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/ca-certificates.crt

# Copy application with proper ownership
COPY --from=api-builder --chown=lucid:lucid /app /app
COPY --from=api-builder --chown=lucid:lucid /run/lucid /run/lucid
COPY --from=api-builder --chown=lucid:lucid /var/log/lucid /var/log/lucid

# Runtime environment
ENV PYTHONPATH=/app \
    UVICORN_WORKERS=1 \
    UVICORN_HOST=0.0.0.0 \
    UVICORN_PORT=8081

# Security and runtime configuration
EXPOSE 8081
USER lucid
WORKDIR /app

# Default command (can be overridden by compose)
ENTRYPOINT ["/usr/local/bin/python3.12", "-m", "uvicorn", "app.main:app"]
CMD ["--host", "0.0.0.0", "--port", "8081", "--workers", "1"]