# =============================================================================
# GUI API Bridge Service - Environment Variables Template
# =============================================================================
# File: gui-api-bridge/gui-api-bridge/config/env.gui-api-bridge.template
# Purpose: Template for all configurable environment variables
# Usage: Copy to configs/environment/.env.gui and customize values
# =============================================================================

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME=gui-api-bridge
SERVICE_VERSION=1.0.0
PORT=8102
HOST=0.0.0.0
SERVICE_URL=http://lucid-gui-api-bridge:8102

# Platform and Environment
LUCID_ENV=production
LUCID_PLATFORM=arm64
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# MongoDB connection URL - REQUIRED
MONGODB_URL=mongodb://lucid:{MONGODB_PASSWORD}@lucid-mongodb:27017/lucid?authSource=admin

# Redis connection URL - REQUIRED
REDIS_URL=redis://:${REDIS_PASSWORD}@lucid-redis:6379/0

# =============================================================================
# BACKEND SERVICE URLs (REQUIRED)
# =============================================================================
# API Gateway
API_GATEWAY_URL=http://lucid-api-gateway:8080

# Blockchain Engine - For session token recovery
BLOCKCHAIN_ENGINE_URL=http://lucid-blockchain-engine:8084

# Authentication Service
AUTH_SERVICE_URL=http://lucid-auth-service:8089

# Session API
SESSION_API_URL=http://lucid-session-api:8113

# Node Management
NODE_MANAGEMENT_URL=http://lucid-node-management:8095

# Admin Interface
ADMIN_INTERFACE_URL=http://lucid-admin-interface:8083

# TRON Payment Service
TRON_PAYMENT_URL=http://lucid-tron-client:8091

# =============================================================================
# BLOCKCHAIN CONFIGURATION (OPTIONAL)
# =============================================================================
# On-System Chain RPC endpoint (optional, for direct chain access)
# ON_SYSTEM_CHAIN_RPC=http://on-chain-distroless:8545

# LucidAnchors contract address (optional, for direct contract calls)
# LUCID_ANCHORS_ADDRESS=

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================
# JWT secret key - REQUIRED
JWT_SECRET_KEY={JWT_SECRET_KEY}

# JWT algorithm
JWT_ALGORITHM=HS256

# JWT token expiry (seconds) - 15 minutes
JWT_EXPIRY_SECONDS=900

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:*,https://localhost:*,file://*

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Default rate limit (requests per minute)
RATE_LIMIT_DEFAULT=100

# Redis database for rate limiting
RATE_LIMIT_REDIS_DB=1

# =============================================================================
# CACHING
# =============================================================================
# Enable response caching
CACHE_ENABLED=true

# Default cache TTL (seconds) - 5 minutes
CACHE_DEFAULT_TTL=300

# Redis database for caching
CACHE_REDIS_DB=2

# =============================================================================
# HEALTH CHECK
# =============================================================================
# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT=10
