# Lucid Base Images Environment Configuration Template
# Copy this file to .env and customize as needed

# Registry Configuration
REGISTRY=ghcr.io/hamigames/lucid
PYTHON_IMAGE=python-base
JAVA_IMAGE=java-base
VERSION=latest

# Build Configuration
PLATFORMS=linux/amd64,linux/arm64
BUILD_ARGS=--build-arg BUILDKIT_INLINE_CACHE=1 --build-arg BUILDKIT_PROGRESS=plain

# Docker Buildx Configuration
BUILDER_NAME=lucid-builder
BUILDER_DRIVER=docker-container
BUILDER_OPTIONS=--driver-opt network=host

# Build Optimization
BUILD_CACHE=true
BUILD_PARALLEL=true
BUILD_OPTIMIZATION=true

# Security Configuration
NONROOT_USER=nonroot:nonroot
SECURITY_SCAN=true
VULNERABILITY_SCAN=true

# Image Metadata
MAINTAINER=Lucid Development Team
DESCRIPTION_PYTHON=Python base distroless runtime for Lucid services
DESCRIPTION_JAVA=Java base distroless runtime for Lucid services
PLANE=infrastructure
STAGE=runtime

# Health Check Configuration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_START_PERIOD=5s
HEALTHCHECK_RETRIES=3

# Port Configuration
PYTHON_PORTS=8000,8080,8443
JAVA_PORTS=8080,8081,8082,8083,8084,8085,8086,8087,8088,8089,8443

# Environment Variables for Runtime
PYTHON_ENV=PYTHONDONTWRITEBYTECODE=1,PYTHONUNBUFFERED=1,LANG=C.UTF-8,LC_ALL=C.UTF-8
JAVA_ENV=JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64,LANG=C.UTF-8,LC_ALL=C.UTF-8

# Build Context
BUILD_CONTEXT=.
PYTHON_DOCKERFILE=Dockerfile.python-base
JAVA_DOCKERFILE=Dockerfile.java-base

# Dependencies
PYTHON_REQUIREMENTS=requirements.txt
JAVA_MAVEN=pom.xml
JAVA_GRADLE=build.gradle
JAVA_GRADLE_PROPERTIES=gradle.properties

# Output Configuration
OUTPUT_FORMAT=table
LOG_LEVEL=info
VERBOSE=false
