# Multi-stage build for Lucid Authentication Service (Distroless)
# Target: Raspberry Pi / ARM64 / AMD64
# Build host: Windows 11 console
# Purpose: Secure authentication service with hardware wallet support

# Stage 1: Build environment
FROM python:3.11-slim as builder

# Set build arguments
ARG BUILDPLATFORM
ARG TARGETPLATFORM
ARG TARGETOS
ARG TARGETARCH

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /build

# Copy requirements first for better caching
COPY auth/requirements.txt auth/requirements.auth.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir --user -r requirements.txt

# Stage 2: Runtime environment (Distroless)
FROM gcr.io/distroless/python3-debian11:latest

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV SERVICE_NAME=authentication-service
ENV SERVICE_VERSION=0.1.0

# Create non-root user
USER 65532:65532

# Set working directory
WORKDIR /app

# Copy Python packages from builder
COPY --from=builder --chown=65532:65532 /root/.local /app/.local

# Copy application code
COPY --chown=65532:65532 auth/ /app/auth/
COPY --chown=65532:65532 admin/system/ /app/admin/system/
COPY --chown=65532:65532 common/ /app/common/

# Create data directories
RUN mkdir -p /data/auth /data/keys /data/sessions

# Set Python path
ENV PATH=/app/.local/bin:$PATH
ENV PYTHONPATH=/app:/app/.local/lib/python3.11/site-packages

# Expose port
EXPOSE 8085

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["python3", "-c", "import requests; requests.get('http://localhost:8085/health')"]

# Default command
ENTRYPOINT ["python3", "-m", "auth.user_manager"]

# Labels for metadata
LABEL maintainer="HamiGames"
LABEL service="authentication-service"
LABEL version="0.1.0"
LABEL description="Lucid RDP Authentication Service with Hardware Wallet Support"
LABEL platform="multi-arch"
LABEL distroless="true"
